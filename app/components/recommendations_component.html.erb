<% if title %>
  <h4><strong><%= title %></strong></h4>
<% end %>
<div class="row pb-4 recommendations">
  <% recommendations.each do |recommendation| %>
    <div class="col-sm-4">
      <div class="card pr-1 h-100">
        <%= link_to url_for(recommendation) do %>
          <%= image_tag(recommendation.t_attached_or_default(:image, I18n.locale) || "placeholder300x200.png", class: 'card-img-top img-fluid activity-card-img') %>
        <% end %>
        <div class="card-body">
          <p class="card-text">
          <%= link_to recommendation.name, url_for(recommendation), class: 'text-decoration-none' %>
          </p>
        </div>
        <div class="card-footer border-top-0 bg-transparent">
        </div>
      </div>
    </div>
  <% end %>
</div>
