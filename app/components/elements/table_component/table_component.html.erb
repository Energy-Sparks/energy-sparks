<%= tag.table id: id, class: classes do %>
  <% if header_rows.any? %>
    <thead>
      <% header_rows.each do |row| %>
        <%= row %>
      <% end %>
    </thead>
  <% end %>
  <% if rows.any? %>
    <tbody>
      <% rows.each do |row| %>
        <%= row %>
      <% end %>
    </tbody>
  <% end %>
  <% if footer_rows.any? %>
    <tfoot>
      <% footer_rows.each do |row| %>
        <%= row %>
      <% end %>
    </tfoot>
  <% end %>
<% end %>
