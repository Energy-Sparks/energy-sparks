<%= component 'notice', status: status, classes: classes, style: style do %>
  <div class="row align-items-center">
    <% if icon %>
      <div class="col-md-<%= icon_cols %> d-flex justify-content-center align-content-center flex-wrap">
        <%= icon %>
      </div>
    <% end %>
    <% if buttons.present? %>
      <div class='<%= "col-md-#{base_columns - buttons.size * 2}" %>'>
        <%= title %>
      </div>
      <% buttons.each do |title, target| %>
        <div class="col-md-2 d-flex justify-content-end">
          <% if target.is_a?(Hash) %>
            <%= button_to sanitize(title),
                          target[:url],
                          method: target[:method],
                          class: 'btn',
                          style: 'height: fit-content;' %>
          <% else %>
            <%= link_to sanitize(title), target, class: 'btn', style: 'height: fit-content;' %>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <div class="col-md-<%= base_columns %>">
        <%= title %>
      </div>
    <% end %>
  </div>
<% end %>
