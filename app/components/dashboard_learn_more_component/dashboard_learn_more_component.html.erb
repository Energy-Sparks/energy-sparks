<div id="<%= id %>" class="row dashboard-learn-more-component <%= classes %> p-4">
  <div class="order-md-first order-last col-12 col-md-6">
    <div class="row">
      <div class="col">
        <h2>
          <%= title %>
        </h2>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <p>
          <%= intro %>
        </p>
      </div>
    </div>
    <% if data_enabled? %>
      <div class="row">
        <div class="col">
          <%= link_to t('schools.dashboards.learn_more.learn_more'),
                      school_advice_path(school),
                      class: 'btn btn-outline-dark mr-2' %>
          <%= link_to t('schools.dashboards.learn_more.opportunities'),
                      priorities_school_advice_path(school),
                      class: 'btn btn-outline-dark' %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="order-first col-12 col-md-6">
    <div class="row">
      <%= image_tag('coloured-graph-placeholder.png', class: 'img-fluid') %>
    </div>
  </div>
</div>
