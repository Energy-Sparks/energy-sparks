<div id="<%= id %>" class="row dashboard-learn-more-component <%= classes %> p-4 d-flex flex-wrap align-items-center justify-content-between">
  <div>
    <div class="row">
      <div class="col">
        <h2>
          <%= title %>
        </h2>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <p>
          <%= intro %>
        </p>
      </div>
    </div>
  </div>
  <div>
    <% if data_enabled? %>
      <div class="row">
        <div class="col d-flex justify-content-center align-items-center">
          <%= link_to t('schools.dashboards.learn_more.explore'),
                      school_advice_path(school),
                      class: 'btn btn-outline-dark mr-2' %>
          <%= link_to t('schools.dashboards.learn_more.opportunities'),
                      priorities_school_advice_path(school),
                      class: 'btn btn-outline-dark' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
