<%= tag.div id: id, class: class_names(classes, 'row') do %>
  <div class="col-12 col-md-2">
    <h3 class="scrollable-title" id="<%= anchor %>">
      <%= title %>
    </h3>
    <p>
      <%= subtitle %>
    </p>
  </div>
  <div class="col-12 col-md-10">
    <ul class="list-unstyled">
    <% results.each_with_index do |result, index| %>
        <li class="<%= class_names('mb-4', { 'mt-4': index.positive? }) %>">
          <%= result %>
        </li>
    <% end %>
      </ul>
  </div>
<% end %>
