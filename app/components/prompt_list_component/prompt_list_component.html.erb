<%= tag.div id: id, class: classes do %>
  <% if title? || link? %>
    <div class="row">
      <div class="col d-flex flex-wrap justify-content-between align-items-center">
        <% if title? %>
          <h3><%= title %></h3>
        <% end %>
        <% if link? %>
          <div>
            <%= link %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
  <% prompts.each do |prompt| %>
    <%= prompt %>
  <% end %>
<% end %>
