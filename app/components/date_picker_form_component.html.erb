<div class="input-group date" id="<%= datetime_picker_id %>" data-target-input="nearest">
  <input class="form-control datetimepicker-input" data-target="#<%= datetime_picker_id %>" type="text" name="<%= name %>" id="<%= id %>" value="<%= value %>" />
  <div class="input-group-append" data-target="#<%= datetime_picker_id %>" data-toggle="datetimepicker">
    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
  </div>
</div>

<script type="text/javascript">
  $(function () {
    $('#<%= datetime_picker_id %>').datetimepicker({
      format: 'DD/MM/YYYY',
      allowInputToggle: true,
      locale: moment.locale()
    });
  });
</script>
