<%= tag.div id: id, class: classes do %>
  <% if tags.any? %>
    <div class='pb-2'>
      <% tags.each do |tag| %>
        <%= tag %>
      <% end %>
    </div>
  <% end %>
  <% if date || author %>
    <div class='pb-4 small'>
      <%= date if date %>
      <% if author %>
        <%= t('common.author_html', author: "<u>#{author}</u>".html_safe) %>
      <% end %>
    </div>
  <% end %>
  <%= header %>
  <%= description %>
  <div>
    <% buttons.each do |button| %>
      <%= button %>
    <% end %>
  </div>
  <% links.each do |link| %>
    <%= link %>
  <% end %>
<% end %>
