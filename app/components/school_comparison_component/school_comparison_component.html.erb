<div
  id="<%= @id %>"
  class="school-comparison-component-callout-row row mt-4">

  <div class="col-md-4 d-flex justify-content-center exemplar">
    <% if @comparison.category == :exemplar %>
      <%= render '/school_comparison_component/box', comparison: @comparison, callout_footer: callout_footer %>
    <% end %>
  </div>

  <div class="col-md-4 d-flex justify-content-center benchmark">
    <% if @comparison.category == :benchmark %>
      <%= render '/school_comparison_component/box', comparison: @comparison %>
    <% end %>
  </div>

  <div class="col-md-4 d-flex justify-content-center other">
    <% if @comparison.category == :other %>
      <%= render '/school_comparison_component/box', comparison: @comparison %>
    <% end %>
  </div>

</div>

<div class="school-comparison-component-footer-row row">
  <div class="col-md-4 d-flex justify-content-center">
    <div>
      <h4 class="category-label">
        <%= t('advice_pages.benchmarks.exemplar_school') %>
      </h4>
      <p>
        <<%= FormatEnergyUnit.format(@comparison.unit, @comparison.exemplar_value, :text).html_safe %>
      </p>
    </div>
  </div>
  <div class="col-md-4 d-flex justify-content-center">
    <div>
      <h4 class="category-label">
        <%= t('advice_pages.benchmarks.benchmark_school') %>
      </h4>
      <p>
        <<%= FormatEnergyUnit.format(@comparison.unit, @comparison.benchmark_value, :text).html_safe %>
      </p>
    </div>
  </div>
  <div class="col-md-4 d-flex justify-content-center">
    <div>
      <h4 class="category-label">
        <%= t('advice_pages.benchmarks.other') %>
      </h4>
      <p>
        ><%= FormatEnergyUnit.format(@comparison.unit, @comparison.benchmark_value, :text).html_safe %>
      </p>
    </div>
  </div>
</div>
