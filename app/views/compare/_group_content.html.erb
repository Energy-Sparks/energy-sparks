<div class="tab-pane fade show <%= ' active' if @school_group %>" id="group" role="tabpanel" aria-labelledby="group-tab">

  <h4 class='my-2'><%= t('compare.index.group.title', name: @school_group.name) %></h4>

  <div class="bg-light p-3 rounded border">
    <%= form_tag benchmarks_compare_path, method: :get do %>
      <%= hidden_field_tag(:school_group, @school_group.slug) %>
      <%= render 'school_type_filter' %>
      <div class="pt-2">
        <%= submit_tag 'Compare schools', class: 'btn btn-sm' %>
      </div>
    <% end %>
  </div>
</div>
