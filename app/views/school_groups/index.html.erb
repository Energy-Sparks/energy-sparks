<h1><%= t('school_groups.index.title') %></h1>

<div class="row school-card-row">
  <div class="col-lg-12">
    <div class="card-deck">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title"><%= t('school_groups.index.energy_sparks_total') %></h2>
          <p class="card-text"><%= t('school_groups.index.active_schools') %>: <%= School.visible.count %></p>
          <p class="card-text"><%= t('school_groups.index.active_with_data_visible_schools') %>: <%= School.visible.data_enabled.count %></p>
          <p class="card-text"><%= t('school_groups.index.onboarding_schools') %>: <%= SchoolOnboarding.all.select(&:incomplete?).count %></p>
          <p class="card-text"><%= t('school_groups.index.invisible_schools') %>: <%= School.not_visible.count %></p>
          <p class="card-text"><%= t('school_groups.index.alert_contacts') %>: <%=Contact.count %></p>
          <p class="card-text"><%= t('school_groups.index.number_of_pupils_in_active_schools') %>: <%= number_with_delimiter School.visible.map(&:number_of_pupils).compact.sum %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<% @school_groups.each_slice(2) do |row| %>
  <div class="row school-card-row">
    <div class="col-lg-12">
      <div class="card-deck">
        <% row.each do |school_group| %>
          <div class="card">
            <div class="card-body">
              <h2 class="card-title"><%= link_to school_group.name, school_group_path(school_group) %></h2>
              <p class="card-text"><%= t('school_groups.index.active_schools') %>: <%= school_group.schools.visible.count %></p>
              <p class="card-text"><%= t('school_groups.index.active_with_data_visible_schools') %>: <%= school_group.schools.visible.data_enabled.count %></p>
              <p class="card-text"><%= t('school_groups.index.invisible_schools') %>: <%= school_group.schools.not_visible.count %></p>
              <p class="card-text"><%= t('school_groups.index.onboarding_schools') %>: <%= school_group.school_onboardings.select(&:incomplete?).count %></p>
              <p class="card-text"><%= t('school_groups.index.alert_contacts') %>: <%= school_group.schools.sum { |school| school.contacts.count } %></p>
              <p class="card-text"><%= t('school_groups.index.number_of_pupils_in_active_schools') %>: <%= number_with_delimiter school_group.schools.visible.map(&:number_of_pupils).compact.sum %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
