<%= render 'enhanced_header' %>

<table width="100%" class="mt-3 table table-borderless table-sorted school-groups-recent-usage-table">
  <thead>
    <tr>
      <th colspan="2"><%= t('common.electricity') %></th>
      <th colspan="2"><%= t('common.gas') %></th>
      <th colspan="2"><%= t('common.storage_heaters') %></th>
      <th colspan="1"><%= t('common.school') %></th>
    </tr>
    <tr>
      <th><%= t('common.labels.last_week') %></th>
      <th><%= t('common.labels.last_year') %></th>
      <th><%= t('common.labels.last_week') %></th>
      <th><%= t('common.labels.last_year') %></th>
      <th><%= t('common.labels.last_week') %></th>
      <th><%= t('common.labels.last_year') %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @school_group.schools.order(:name).each do |school| %>
      <% recent_usage = school.recent_usage %>
      <tr>
        <td class="<%= recent_usage&.electricity&.week&.message_class %>" data-order=<%= recent_usage&.electricity&.week&.change_exp || 1.0 %> %>
          <%= up_downify(recent_usage&.electricity&.week&.change) %>
        </td>
        <td class="<%= recent_usage&.electricity&.year&.message_class %>" data-order=<%= recent_usage&.electricity&.year&.change_exp || 1.0 %>>
          <%= up_downify(recent_usage&.electricity&.year&.change) %>
        </td>
        <td class="<%= recent_usage&.gas&.week&.message_class %>" data-order=<%= recent_usage&.gas&.week&.change_exp || 1.0 %>>
          <%= up_downify(recent_usage&.gas&.week&.change) %>
        </td>
        <td class="<%= recent_usage&.gas&.year&.message_class %>" data-order=<%= recent_usage&.gas&.year&.change_exp || 1.0 %>>
          <%= up_downify(recent_usage&.gas&.year&.change) %>
        </td>
        <td class="<%= recent_usage&.storage_heaters&.week&.message_class %>" data-order=<%= recent_usage&.storage_heaters&.week&.change_exp || 1.0 %>>
          <%= up_downify(recent_usage&.storage_heaters&.week&.change) %>
        </td>
        <td class="<%= recent_usage&.storage_heaters&.year&.message_class %>" data-order=<%= recent_usage&.storage_heaters&.year&.change_exp || 1.0 %>>
          <%= up_downify(recent_usage&.storage_heaters&.year&.change) %>
        </td>
        <td>
          <%= link_to school.name, school_path(school) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
