<%= render Layout::Cards::AdminButtonPanelComponent.new(current_user: current_user, row: true) do |panel| %>
  <% panel.with_status page.published ? 'Published' : 'Unpublished', style: page.published ? :info : :warning %>
  <% panel.with_button 'Edit Page', edit_admin_cms_page_path(page) %>
  <% panel.with_button 'Add Section', new_admin_cms_section_path(page_id: page.id) %>
  <% if page.published? %>
    <% panel.with_button 'Hide Page', hide_admin_cms_page_path(page),
                         data: {
                           method: :put,
                           confirm: 'Note this will remove the content from view, are you sure?'
                         } %>
  <% elsif page.publishable? %>
    <% panel.with_button 'Publish Page', publish_admin_cms_page_path(page),
                         data: {
                           method: :put,
                           confirm: 'Note this will make the content public, are you sure?'
                         } %>
  <% end %>
<% end %>
