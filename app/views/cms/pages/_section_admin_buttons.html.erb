<%= render Layout::Cards::AdminButtonPanelComponent.new(id: "section-#{section.id}-admin-buttons",
                                                        current_user: current_user, row: true) do |panel| %>
  <% panel.with_status section.published ? 'Published' : 'Unpublished', style: section.published ? :info : :warning %>
  <% panel.with_button 'Edit Section', edit_admin_cms_section_path(section) %>
  <% if section.published? %>
    <% panel.with_button 'Hide Section', hide_admin_cms_section_path(section),
                         data: {
                           method: :put,
                           confirm: 'Note this will remove the content from view, are you sure?'
                         } %>
  <% elsif section.publishable? %>
    <% panel.with_button 'Publish Section', publish_admin_cms_section_path(section),
                         data: {
                           method: :put,
                           confirm: 'Note this will make the content public, are you sure?'
                         } %>
  <% end %>
<% end %>
