<%= render Layout::Cards::AdminButtonPanelComponent.new(id: "category-#{category.id}-admin-buttons",
                                                        current_user: current_user, row: true) do |panel| %>
  <% panel.with_status category.published ? 'Published' : 'Unpublished', style: category.published ? :info : :warning %>
  <% panel.with_button 'Edit Category', edit_admin_cms_category_path(category) %>
  <% panel.with_button 'Add Page', new_admin_cms_page_path(category_id: category.id) %>
  <% if category.published? %>
    <% panel.with_button 'Hide Category', hide_admin_cms_category_path(category),
                         data: {
                           method: :put,
                           confirm: 'Note this will remove the content from view, are you sure?'
                         } %>
  <% elsif category.publishable? %>
    <% panel.with_button 'Publish Category', publish_admin_cms_category_path(category),
                         data: {
                           method: :put,
                           confirm: 'Note this will make the content public, are you sure?'
                         } %>
  <% end %>
<% end %>
