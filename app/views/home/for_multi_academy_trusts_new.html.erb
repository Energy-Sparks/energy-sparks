<% content_for :page_title, t('for_multi_academy_trusts.title') %>

<header>
  <div class="row masthead">
    <div class="col-7">
    </div>
    <div class="col-5 masthead-content">
      <div class="row pt-5">
        <div class="col">
          <p class="display-3"><strong><%= t('for_multi_academy_trusts.title')%></strong></p>
      </div>
      </div>
      <div class="row">
        <div class="col pr-5">
          <h1 class="headline-sub-text"><%= t('home.sub_title') %></h1>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8 offset-md-3 pt-5">
          <%= render 'book_demo_embed', label: t('book_a_demo') %>
        </div>
      </div>
    </div>
  </div>
</header>

<section>
  <div class="application container">
    <div class="row">
      <div class="col-7">
        <div class="row">
          <h1 style="color: #232b49;"><%= t('marketing.mats.benefits.costs') %></h1>
        </div>
        <div class="row">
          <h1 style="color: #232b49;"><%= t('marketing.mats.benefits.emissions') %></h1>
        </div>
        <div class="row">
          <h1 style="color: #232b49;"><%= t('marketing.mats.benefits.pupils') %></h1>
        </div>
        <div class="row">
          <div class="col-md-8 offset-md-3 pt-2">
            <%= render 'book_demo_embed', label: t('book_a_demo') %>
          </div>
        </div>
      </div>
      <div class="col-5 audit-image">
      </div>
    </div>
  </div>
</section>

<div class="row bg-dark-blue" style="background-color: #232b49;">
  <div class="col">
    <div class="row justify-content-center">
      <h1 style="color: white;"><%= t('marketing.mats.learn_why.title') %></h1>
    </div>
  </div>
</div>

<section>
