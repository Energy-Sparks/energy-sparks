<% content_for :page_title, t('support_us.title') %>

<div class="application container">
  <div class="row padded-row">
    <div>
      <h1><%= t('support_us.title') %></h1>
      <%= render 'two_column_image_deck', column_one: 'support-us/support_us_1.jpg', column_two: 'support-us/support_us_2.jpg' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 pb-6">
      <%= t('support_us.content_html', school_count: School.active.count) %>
      <p><%= link_to t('support_us.our_existing_funders_and_partners'), team_path + '#partners' %></p>
      <%= render 'home/testimonial',
        quote:  t('support_us.quote.text'),
        by: 'Dan McCallum',
        title: t('support_us.quote.title'),
        location: 'Awel Aman Tawe and Egni Co-op'
      %>
    </div>
  </div>
</div>