<div class="mt-3">
  <div id="featured-videos" class="application container home-block">
    <% featured_videos(3).each_slice(3) do |videos| %>
      <div class="card-deck">
        <% videos.each do |video| %>
        <div class="card border-light">
          <div class="card-body">
            <div class="embed-responsive embed-responsive-16by9">
              <iframe class="embed-responsive-item" src="<%= video.embed_url %>" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    <% end %>

  </div>
</div>
