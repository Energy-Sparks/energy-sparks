<div class="row mt-4">
  <div class="col-sm-2">
    <%= link_to intervention_type_path(intervention_type) do %>
      <%= render 'intervention_types/image', intervention_type: intervention_type, css_class: "activity-card-img-thumbnail" %>
    <% end %>
  </div>
  <div class="col-sm-10">
    <p>
      <%= link_to intervention_type.title, intervention_type_path(intervention_type) %>
    </p>
    <p>
      <%= intervention_type.summary %>
    </p>
    <% if school.present? && intervention_type.actions_for_school(school).any? %>
      <%= render 'intervention_types/previous_records', interventions: intervention_type.actions_for_school(school).by_date, school: school %>
    <% else %>
      <%= render 'intervention_types/intervention_type_points', intervention_type: intervention_type %>
    <% end %>
  </div>
</div>
