<div class="row">
  <div class="col">
    <div class="d-flex justify-content-between align-items-center">
      <h1><%= t('intervention_types.search.title') %></h1>
      <div>
        <%= link_to t('intervention_types.search.all_actions'), intervention_type_groups_path, class: 'btn btn-outline-dark rounded-pill font-weight-bold'  %>
        <%= link_to t('intervention_types.search.pupil_activities'), activity_categories_path, class: 'btn btn-outline-dark rounded-pill font-weight-bold'  %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col">
    <p>
      <%= t('intervention_types.search.search_for_actions_by_keyword') %>
    </p>
  </div>
</div>

<%= form_tag search_intervention_types_path, method: :get do %>
  <div class="row">
    <div class="col-md-10">
      <%= text_field_tag :query, params[:query], class: 'form-control' %>
    </div>
    <div class="col-md-2">
      <%= submit_tag t('intervention_types.search.search'), class: "btn btn-primary" %>
    </div>
  </div>
  <br/>
<% end %>

<% if @intervention_types.empty? %>
  <% if params[:query] %>
    <p>
      <%= t('intervention_types.search.no_results_found') %>
    </p>
  <% end %>
<% else %>
  <h4>
    <%= t('intervention_types.search.results_found', count: @pagy.count) %>
  </h4>
  <br/>

  <% @intervention_types.each do |intervention_type| %>
    <%= render 'intervention_types/intervention_type', intervention_type: intervention_type, school: current_user_school %>
  <% end %>

  <br/>
  <br/>

  <div class="row justify-content-md-center">
    <div class="col col-md-2">
      <%== pagy_bootstrap_nav(@pagy) if @pagy.count > @pagy.items %>
    </div>
  </div>

<% end %>
