<% interventions.each do |intervention| %>
  <div class="row">
    <div class="col-md-9">
      <div class="row alert info-bar text-dark bg-light" role="alert">
        <div class="col-md-1">
          <i class="fas fa-tasks fa-2x"></i>
        </div>
        <div class="col-md-8">
          Action previously completed on: <%= nice_dates intervention.at %>
        </div>
        <div class="col-md-3">
          <%= link_to "View completed action", school_intervention_path(current_user_school, intervention), class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
