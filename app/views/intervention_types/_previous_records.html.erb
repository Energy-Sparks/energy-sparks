<div class="row">
  <div class="col-md-9">
    <div class="row alert alert-secondary info-bar text-dark bg-light" role="alert">
      <div class="col-lg-1 d-none d-lg-block">
        <%= far_icon("check-circle text-success fa-2x") %>
      </div>
      <div class="col-lg-11 col-sm-12">
        Action previously completed
        <strong>
          <%= link_to "#{human_counts(interventions)}", school_timeline_path(school) %>
        </strong>
        <%= interventions.count > 1 ? ' most recently on ' : ' on ' %>
        <strong>
          <%= link_to "#{nice_dates(interventions.last.at)}", school_intervention_path(school, interventions.last) %>
        </strong>
      </div>
    </div>
  </div>
</div>
