<div class="table-responsive-sm">
  <table class="table table-borderless management-priorities">
    <thead>
      <tr>
        <th scope="col" class="h4"></th>
        <th scope="col"><%= t('management.priorities.cost_saving_html') %></th>
        <th scope="col"><%= t('management.priorities.reduced_emissions_html') %></th>
        <th scope="col"><%= t('management.priorities.delivery_cost_html') %></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% management_priorities.each do |priority| %>
        <tr>
          <td scope="row">
            <%= priority.management_priorities_title %>
            <% if local_assigns[:show_debug] %>
              <%= link_to t('management.priorities.alert'), school_alert_path(school, priority.alert) %>
              <%= t('management.priorities.priority') %>: <%= priority.priority %>
            <% end %>
          </td>
          <td><%= priority.template_variables[:average_one_year_saving_gbp] %></td>
          <td><%= priority.template_variables[:one_year_saving_co2] %><br></td>
          <td><%= priority.template_variables[:average_capital_cost] %></td>
          <td>
            <% path = find_out_more_path_from_alert_content(school, priority) %>
            <% if path != nil %>
              <%= link_to t('management.priorities.find_out_more'), path, class: 'btn btn-rounded btn-fixed-width-10' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
    <% if local_assigns[:show_more] %>
      <tfoot>
        <tr>
          <td colspan="5" class="text-right"><%= link_to t('management.priorities.more_opportunities'),
                                                         priorities_school_advice_path(school) %></td>
        </tr>
      </tfoot>
    <% end %>
  </table>
</div>
