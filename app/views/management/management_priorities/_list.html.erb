<div class="table-responsive-sm">
  <table class="table table-borderless management-priorities">
    <thead>
      <tr>
        <th scope="col" class="h4"></th>
        <th scope="col">Cost saving</th>
        <th scope="col">Reduced emissions</th>
        <th scope="col">Delivery cost</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% management_priorities.each do |priority| %>
        <tr>
          <td scope="row">
            <%= priority.management_priorities_title  %>
            <% if local_assigns[:show_debug] %>
              <%= link_to 'Alert', school_alert_path(school, priority.alert) %>
              Priority: <%= priority.priority %>
            <% end %>
          </td>
          <td><%= priority.template_variables[:average_one_year_saving_gbp] %> <small>/year</small></td>
          <td><%= priority.template_variables[:one_year_saving_co2] %> <small>/year</small></td>
          <td><%= priority.template_variables[:average_capital_cost] %></td>
          <td>
            <% if priority.find_out_more %>
              <%= link_to 'Find out more', school_find_out_more_path(school, priority.find_out_more), class: 'btn btn-rounded btn-fixed-width-10' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
    <% if local_assigns[:show_more] %>
      <tfoot>
        <tr>
          <td colspan="5" class="text-right"><%= link_to 'See more opportunities', management_school_management_priorities_path(school)  %></td>
        </tr>
      </tfoot>
    <% end %>
  </table>
</div>
