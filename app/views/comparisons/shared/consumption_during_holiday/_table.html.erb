<%= component 'comparison_table',
              report: report, advice_page: advice_page, table_name: table_name, index_params: index_params,
              headers: headers, colgroups: colgroups, advice_page_tab: advice_page_tab do |c| %>
  <% @results.each do |result| %>
    <% c.with_row do |r| %>
      <% r.with_school school: result.school %>
      <%= r.with_var val: result.holiday_projected_usage_gbp, unit: :£ %>
      <%= r.with_var val: result.holiday_usage_to_date_gbp, unit: :£ %>
      <%= r.with_var { holiday_name(result.holiday_type, result.holiday_start_date, result.holiday_end_date) } %>
    <% end %>
  <% end %>
<% end %>
