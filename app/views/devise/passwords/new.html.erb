<% content_for :page_title do %>
  <%= t('devise.passwords.new.page_title') %>
<% end %>
<div class="row justify-content-md-center">
  <div class="col col-md-12 col-lg-8">
    <h1 class='mt-lg-4 mt-sm-0'>
      <%= t('devise.passwords.new.forgot_your_password') %>
    </h1>

    <div>
      <%= simple_form_for(resource, as: resource_name,
                                    url: password_path(resource_name),
                                    html: { class: 'form-horizontal mt-3', method: :post }) do |f| %>
        <%= render 'devise/shared/error_messages', resource: resource %>

        <div class="form-group row">
          <%= f.label :email, class: 'col-sm-4 col-form-label' %>
          <div class="col-sm-6">
            <%= f.input :email,
                        label: false,
                        required: true,
                        autofocus: true,
                        class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-6 offset-sm-4">
            <%= f.submit t('devise.passwords.new.send_me_reset_password_instructions'), class: 'btn btn-primary' %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-6 offset-sm-4">
            <%= render 'devise/shared/links' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
