<div class="row">
  <div class="col">
    <div class="d-flex justify-content-between align-items-center">
      <h1>Recommended for your school</h1>
      <div>
        <%= link_to 'All actions', intervention_type_groups_path, class: 'btn btn-outline-dark rounded-pill font-weight-bold'  %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col">
    <p>
      A collection of <strong><%= @suggested_interventions.count %></strong> actions that are suggested for your school, based on your previous actions and your targets.
    </p>
  </div>
</div>

<% @suggested_interventions.each do |intervention_type| %>
  <%= render 'intervention_types/intervention_type', intervention_type: intervention_type, school: current_user_school %>
<% end %>
