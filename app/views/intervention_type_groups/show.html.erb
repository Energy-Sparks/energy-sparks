<div class="row">
  <div class="col">
    <div class="d-flex justify-content-between align-items-center">
      <h1><%= @intervention_type_group.title %></h1>
      <div>
        <%= link_to 'All action type groups', intervention_type_groups_path, class: 'btn btn-secondary'  %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col">
    <p>
      <% if @intervention_type_group.description.present? %>
        <%= @intervention_type_group.description %>
      <% end %>
    </p>
    <p>
      A collection of <strong><%= @intervention_type_group.intervention_types.active.count %></strong> actions types relevant to a range of subjects and key stages.
    </p>
  </div>
</div>

<% @intervention_type_group.intervention_types.active.display_order.each do |intervention_type| %>
  <div class="row mt-2">
    <div class="col-sm-2">
      <%= link_to intervention_type_path(intervention_type) do %>
        <%= render 'intervention_types/image', intervention_type: intervention_type, css_class: "activity-card-img-thumbnail" %>
      <% end %>
    </div>
    <div class="col-sm-10">
      <p>
        <%= link_to intervention_type.title, intervention_type_path(intervention_type) %>
      </p>
      <p>
        <%= intervention_type.summary %>
      </p>
      <%#= render 'intervention_types/intervention_type_score', intervention_type: intervention_type %>
      <%#= render 'intervention_types/intervention_type_key_stages', intervention_type: intervention_type %>
      <%#= render 'intervention_types/activity_type_subjects', activity_type: activity_type %>
    </div>
  </div>
<% end %>
