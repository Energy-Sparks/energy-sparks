<fieldset>
  <%= f.label 'Describe what was done', for: :description %>
  <%= f.rich_text_area :description, wrapper_html: {class: 'border-left pl-3 ml-2'}%>
</fieldset>
<fieldset>
  <%= f.label 'When did you do it?', for: :at %>
  <%= f.input :at, as: :tempus_dominus_date, label: false, input_html: { class: "form-control form-control-lg", data: { max_date: h(Time.now.httpdate) }} %>
</fieldset>
<fieldset>
  <%= f.hidden_field :intervention_type_id, value: intervention_type.id, required: true %>
</fieldset>
<%= f.submit 'Save', class: 'btn btn-success' %>
