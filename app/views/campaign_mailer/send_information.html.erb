<p>
  <%= @contact[:first_name] %>,
</p>

<div class="s-3"></div>
<p>
  <%= t('campaign_mailer.send_information.for_schools.intro') %>
</p>

<div class="s-3"></div>
<p>
  <%= t('campaign_mailer.send_information.for_schools.about_us') %>
</p>

<div class="s-3"></div>
<h4>
  <%= t('campaign_mailer.send_information.for_schools.demo') %>
</h4>
<div class="s-3"></div>

<div class="s-3"></div>
<p>
  <% case @contact_org_type %>
  <% when :multi_academy_trust %>
    <%= t('campaign_mailer.send_information.for_mats.video_html',
          video_link: demo_video_campaigns_url,
          book_demo_link: 'https://calendly.com/energy-sparks/mat-demo') %>
  <% when :local_authority %>
    <%= t('campaign_mailer.send_information.for_las.video_html',
          video_link: demo_video_campaigns_url,
          book_demo_link: 'https://calendly.com/energy-sparks/mat-demo') %>
  <% else %>
    <%= t('campaign_mailer.send_information.for_schools.video_html',
          video_link: demo_video_campaigns_url,
          book_demo_link: 'https://calendly.com/energy-sparks/demo-for-individual-schools') %>
  <% end %>
</p>

<div class="s-3"></div>
<h4>
  <%= t('campaign_mailer.send_information.for_schools.examples') %>
</h4>
<div class="s-3"></div>

<div class="s-3"></div>
<p>
  <%= t('campaign_mailer.send_information.for_schools.dashboards') %>
</p>

<div class="s-3"></div>
<ul>
  <li>
    <a href="<%= example_adult_dashboard_campaigns_url %>">
      <%= t('campaign_mailer.send_information.for_schools.example_adult_dashboard') %>
    </a>
  </li>
  <li>
    <a href="<%= example_pupil_dashboard_campaigns_url %>">
      <%= t('campaign_mailer.send_information.for_schools.example_pupil_dashboard') %>
    </a>
  </li>
</ul>

<% if [:multi_academy_trust, :local_authority].include?(@contact_org_type) %>
  <% if @contact_org_type == :multi_academy_trust %>
    <% key = 'campaign_mailer.send_information.for_mats.group_dashboard_html' %>
    <% url = example_mat_dashboard_campaigns_url %>
  <% else %>
    <% key = 'campaign_mailer.send_information.for_las.group_dashboard_html' %>
    <% url = example_la_dashboard_campaigns_url %>
  <% end %>
  <div class="s-3"></div>
  <p>
    <%= t(key, group_dashboard_link: url) %>
  </p>
<% end %>

<div class="s-3"></div>
<h4>
  <%= t('campaign_mailer.send_information.for_schools.case_studies') %>
</h4>
<div class="s-3"></div>

<div class="s-3"></div>
<p>
  <%= t('campaign_mailer.send_information.for_schools.case_studies_html',
        case_study_link: case_studies_url) %>
</p>

<div class="s-3"></div>
<p>
  <% if @contact_org_type == :school %>
  <%= t('campaign_mailer.send_information.for_schools.download_pack_html',
        download_pack_link: school_pack_campaigns_url,
        prices_link: pricing_url) %>
  <% else %>
      <%= t('campaign_mailer.send_information.for_schools.download_pack_html',
            download_pack_link: mat_pack_campaigns_url,
            prices_link: pricing_url) %>
  <% end %>
</p>

<div class="s-3"></div>
<h4>
  <%= t('campaign_mailer.send_information.for_schools.ready') %>
</h4>
<div class="s-3"></div>

<div class="s-3"></div>
<p>
  <% case @contact_org_type %>
  <% when :multi_academy_trust %>
    <%= t('campaign_mailer.send_information.for_mats.enrol_html',
          enrol_link: enrol_our_multi_academy_trust_url) %>
  <% when :local_authority %>
    <%= t('campaign_mailer.send_information.for_las.enrol_html',
          enrol_link: enrol_our_local_authority_url) %>
  <% else %>
    <%= t('campaign_mailer.send_information.for_schools.enrol_html',
          enrol_link: enrol_our_school_url) %>
  <% end %>
</p>

<div class="s-3"></div>
<p>
  <%= t('campaign_mailer.send_information.for_schools.final') %>
</p>

<div class="s-3"></div>
<p>
  <%= t('campaign_mailer.send_information.for_schools.sign_off') %>,
</p>

<div class="s-3"></div>
<p>
  <%= t('campaign_mailer.send_information.for_schools.name') %>
</p>

<div class="s-3"></div>
<p>
  <%= t('campaign_mailer.send_information.for_schools.title') %>
</p>
