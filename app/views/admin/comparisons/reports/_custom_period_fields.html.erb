<div class="nested-fields">
  <div class="row mb-3">
    <div class="col">
      <%= f.input :current_label %>
    </div>
    <div class="col">
      <%= f.input :current_start_date, as: :tempus_dominus_date %>
    </div>
    <div class="col">
      <%= f.input :current_end_date, as: :tempus_dominus_date %>
    </div>
    <div class="col">
      <%= f.input :previous_label %>
    </div>
    <div class="col">
      <%= f.input :previous_start_date, as: :tempus_dominus_date %>
    </div>
    <div class="col">
      <%= f.input :previous_end_date, as: :tempus_dominus_date %>
    </div>
    <div class="col">
      <%= link_to_remove_association t('common.labels.remove'), f, class: 'btn' %>
    </div>
  </div>
</div>
