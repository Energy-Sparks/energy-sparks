<%= form_for([:admin, school_onboarding]) do |f| %>

  <%= render 'shared/errors', subject: school_onboarding, subject_name: 'form' %>

  <div class="form-group">
    <%= f.label :school_name %>
    <%= f.text_field :school_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :contact_email, 'Contact email address' %>
    <%= f.text_field :contact_email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :notes, 'Setup notes (not shown to school)' %>
    <%= f.text_area :notes, class: 'form-control' %>
  </div>

  <div class="form-group">
    <div class="form-check form-check-inline">
      <%= f.check_box :school_will_be_public, class: 'form-check-input' %>
      <%= f.label :school_will_be_public, class: 'form-check-label' %>
    </div>
  </div>

  <h2>School Group</h2>
  <div class="form-group">
    <%= f.label :school_group_id, 'Group' %>
    <%= f.select :school_group_id, options_from_collection_for_select(SchoolGroup.order(:name), 'id', 'name', (school_onboarding.school_group_id)), {include_blank: true}, {class: 'form-control'} %>
  </div>

  <div class="actions">
    <%= f.submit 'Next', class: 'btn btn-primary' %>
  </div>
<% end %>
