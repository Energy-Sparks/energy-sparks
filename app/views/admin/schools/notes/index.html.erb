<%= render 'header', title: "#{@school.name} Notes & Issues" do %>
  <%= header_nav_link 'School group', admin_school_group_url(@school.school_group) if @school.school_group %>
<% end %>

<p>
  <%= link_to "#{((fa_icon('sticky-note text-secondary')))} New Note".html_safe, new_admin_school_note_path(@school), class: 'btn btn-primary btn-sm' %>
  <%= link_to "#{((fa_icon('exclamation-circle text-secondary')))} New Issue".html_safe, new_admin_school_note_path(@school, note_type: :issue), class: 'btn btn-primary btn-sm' %>
</p>

<% @notes.each do |note| %>
  <div class="row p-2">
    <div class="col-md-12 bg-light">
      <div>
        <h5><%= fa_icon(note.issue? ? 'exclamation-circle text-secondary' : 'sticky-note text-secondary') %> <%= note.title %>
          <div class="float-right"><small> <span class="badge badge-secondary"><%= note.updated_by.email %></span> <%= nice_date_times_today(note.updated_at) %></small></div>
        </h5>
      </div>
      <span class="badge badge-pill <%= note.issue? ? "badge-danger" : "badge-success" %>"><%= note.note_type.capitalize %></span>
      <% if note.issue? %>
        <span class="badge badge-secondary"><%= note.status.capitalize %></span>
      <% end %>
      <% if note.fuel_type %>
        <span class="badge badge-secondary"><%= note.fuel_type.capitalize %></span>
      <% end %>
      <div class="bg-white my-2 p-2"><%= note.description %></div>
      <div><small><strong>Created</strong> by <span class="badge badge-secondary"><%= note.created_by.email %></span> <%= on_or_at(note.created_at) %> <strong><%= nice_date_times_today(note.created_at) %></strong></small>
        <div class='float-right pb-2'>
          <%= link_to 'Resolve', resolve_admin_school_note_path(@school, note), class: 'btn btn-info btn-sm' if note.resolvable? %>
          <%= link_to 'Edit', edit_admin_school_note_path(@school, note), class: 'btn btn-info btn-sm' %>
          <%= link_to 'Delete', admin_school_note_path(@school, note), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= render "shared/pagy_footer" %>