<% if issue.owned_by %>
  <span class="badge badge-pill badge-secondary font-weight-normal">
    <%= link_to (issue.owned_by == current_user ? "You" : issue.owned_by.display_name),
        polymorphic_path([:admin, issue.try(:issueable), Issue], user: issue.owned_by_id),
        class: 'text-white text-decoration-none' %>
  </span>
<% end %>
