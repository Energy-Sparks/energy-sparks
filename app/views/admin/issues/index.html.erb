<%= render 'header', title: issueable_icon(@issueable).html_safe + (@issueable ? " #{@issueable.name}" : '') + " Issues & Notes", issue: nil, issueable: @issueable do %>
  <% if @issueable %>
    <% school_group = @issueable.school_group || @issueable %>
    <%= header_nav_link "#{school_group.name} group", admin_school_group_path(school_group) %>
  <% end %>
<% end %>

<% if @issueable %>
  <p>
    <%= link_to "#{fa_icon('exclamation-circle text-secondary')} New Issue".html_safe, url_for([:new, :admin, @issueable, :issue, issue_type: :issue]), class: 'btn btn-primary btn-sm' %>
    <%= link_to "#{fa_icon('sticky-note text-secondary')} New Note".html_safe, url_for([:new, :admin, @issueable, :issue, issue_type: :note]), class: 'btn btn-primary btn-sm' %>
  </p>
<% end %>

<% if @issues.any? %>
  <div class="container">
  <% @issues.each do |issue| %>
    <%= render 'issue', issue: issue, index: true, issueable: @issueable %>
  <% end %>
  </div>
  <%= render "shared/pagy_footer" %>
<% else %>
  <p>No issues or notes to display.</p>
<% end %>

