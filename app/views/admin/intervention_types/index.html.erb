<h1>Intervention Types</h1>
<div class="container">
  <div class="row">
    <p><%= link_to 'New Intervention type', new_admin_intervention_type_path, class: 'btn', id: 'new-type' %></p>
  </div>
</div>

<% InterventionTypeGroup.all.each do |intervention_type_group| %>
  <div class="container">
    <h2 id="intervention_type_group_<%= intervention_type_group.id%>"><%= intervention_type_group.name %></h2>
    <div class="row">
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Title</th>
          <th scope="col">Score</th>
          <th scope="col"></th>
        </tr>
      </thead>

      <tbody>
        <% @intervention_types.where(intervention_type_group: intervention_type_group).sort_by(&:id).each do |intervention_type| %>
          <tr class="<%= active(intervention_type.active) %>" scope="row" >
            <td><%= intervention_type.id %>
            <td><%= link_to intervention_type.name, intervention_type_path(intervention_type) %></td>
            <td><%= intervention_type.score %></td>
            <td><%= link_to 'Edit', edit_admin_intervention_type_path(intervention_type), class: 'btn btn-sm' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>

<% end %>

<div class="container">
  <div class="row">
    <p><%= link_to 'New Intervention type', new_admin_intervention_type_path, class: 'btn' %></p>
  </div>
</div>
