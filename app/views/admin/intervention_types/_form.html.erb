<%= simple_form_for([:admin, intervention_type],
  html: { id: 'intervention_type_form' }) do |f| %>

  <ul class="nav nav-tabs" id="nav-intervention-types" role="tablist">
    <% I18n.available_locales.each do |locale| %>
      <li class="nav-item">
        <a class="nav-link <%= 'active' if locale == I18n.locale %>" id="nav-intervention-type-<%= locale %>-tab" data-toggle="tab" href="#intervention-type-<%= locale %>" role="tab" aria-controls="intervention-type-<%= locale %>" aria-selected="true">
          <%= locale %>
        </a>
      </li>
    <% end %>
  </ul>

  <br/>

  <div class="tab-content locale" id="nav-tabContent">
    <% I18n.available_locales.each do |locale| %>
      <div class="tab-pane <%= 'active' if locale == I18n.locale %>" id="intervention-type-<%= locale %>" role="tabpanel" aria-labelledby="nav-intervention-type-<%= locale %>-tab">
        <%= render 'form_locale', f: f, intervention_type: @intervention_type, locale: locale %>
      </div>
    <% end %>
  </div>

  <br/>

  <%= f.input :intervention_type_group_id, as: :select, label: 'Intervention category', collection: InterventionTypeGroup.all, include_blank: false %>

  <%= f.label 'Image' %>
  <p class="small">This image will appear in the right-hand panel next to both non-specific and school-specific descriptions.</p>

  <div class="upload-preview">
    <div class="col-md-3">
      <% if !f.object.image.blank? %>
        <%= image_tag f.object.image, width: '300px' %>
      <% else %>
        <%= image_tag '1x1.png' %>
      <% end %>
    </div>
  </div>

  <p>
    <%= f.input :image, label: false %>
  </p>

  <%= f.input :score, label: 'Score', as: :string %>

  <%= f.input :active %>

  <%= f.input :custom, label: "Custom ('Other')" %>

  <div class="intervention_type_suggestions">
    <h2>Suggested Next Actions</h2>

    <div class="row">
      <div class="col-md-8 mb-3">
        <label for="firstName">Action Type</label>
      </div>
      <div class="col-md-1 mb-3">
        <label for="lastName">Delete?</label>
      </div>
    </div>

    <%= f.fields_for :intervention_type_suggestions do |suggestion| %>
      <div class="row">
        <div class="col-md-8 mb-3">
          <%= suggestion.select(
                :suggested_type_id,
                grouped_options_for_select(
                  InterventionTypeGroup.listed_with_intervention_types.map{|group, types| [group.title, types.map {|type| [type.name, type.id]}]},
                  suggestion.object.suggested_type_id.to_s
                ),
                { include_blank: true },
                { class: 'form-control select2'}
              )
          %>
        </div>
        <div class="col-md-1 mb-3">
          <%= suggestion.check_box :_destroy, class: 'form-control' %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
