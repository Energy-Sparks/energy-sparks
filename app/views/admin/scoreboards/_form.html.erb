<%= simple_form_for([:admin, scoreboard]) do |f| %>
  <%= f.input :academic_year_calendar_id, as: :select, collection: Calendar.national, include_blank: false, hint: 'Used for scoreboard academic years'%>
  <%= render 'admin/shared/locale_tabs', f: f, field: :name do |locale| %>
    <%= f.input t_field(:name, locale), label: CaseStudy.human_attribute_name(:name) %>
  <% end %>
  <%= f.input :description %>
  <%= f.input :public, as: :boolean %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
