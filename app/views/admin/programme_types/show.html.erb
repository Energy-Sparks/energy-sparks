<h1><%= @programme_type.title %></h1>

<h2>Image</h2>

<% if !@programme_type.image.blank? %>
  <p><%= image_tag @programme_type.image, width: '300px', class: "programme_type_image" %></p>
<% end %>

<h2>Description</h2>
<p><%= @programme_type.description %></p>

<h2>Activities</h2>
<ol class="activities">
  <% @programme_type.activity_types.order(:position).each do |activity_type| %>
    <li><%= link_to activity_type.name, activity_type_path(activity_type) %></li>
  <% end %>
</ol>

<p><%= link_to 'Edit activities', admin_programme_type_activity_types_path(@programme_type), class: 'btn btn-warning' %></p>
<p><%= link_to 'All programme types', admin_programme_types_path, class: 'btn btn-primary' %></p>
