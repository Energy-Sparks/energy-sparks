<%= simple_form_for([:admin, programme_type]) do |f| %>
  <%= f.input :title %>
  <%= f.label 'Description', for: :description %>
  <%= f.rich_text_area :description %>
  <%= f.input :short_description %>
  <%= f.input :document_link %>
  <%= f.input :active %>
  <%= f.input :default %>
  <%= f.submit 'Save', class: 'btn btn-success' %>
<% end %>
