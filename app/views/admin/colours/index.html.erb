<h2>Colours</h2>

<div>
  <% Colours::PALETTE.each do |key, group| %>
    <% grouped, ungrouped = group.partition { |_, value| value.is_a?(Hash) }.map(&:to_h) %>
    <% grouped.each do |name, shades| %>
      <h3><%= key %>: <%= name %></h3>
      <div class="row no-gutters">
        <% shades.each do |shade, mapping| %>
          <%= render 'colour', name: "#{name}_#{shade}", map: mapping, hex: Colours.hex(mapping) %>
        <% end %>
      </div>
    <% end %>
    <% if ungrouped.any? %>
      <h3><%= key %></h3>
      <div class="row no-gutters">
        <% ungrouped.each do |name, value| %>
          <%= render 'colour', name: name, map: value, hex: Colours.hex(value) %>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>

