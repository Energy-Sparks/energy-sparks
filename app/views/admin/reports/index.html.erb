<% content_for :page_title do %>Admin Reports<% end %>
<div class="application container">
  <div class="row padded-row">
    <div class="col-md-9">
      <h1>Admin Reports</h1>
    </div>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Report</th>
        <th>Latest reading date</th>
        <th>Download all data</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= link_to "AMR Report", admin_reports_amr_validated_readings_path %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td><%= link_to 'Alert subscribers', admin_reports_alert_subscribers_path %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td><%= link_to 'Unsubscriptions', admin_unsubscriptions_path  %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td><%= link_to 'Carbon intensity data', data_feeds_carbon_intensity_readings_path  %></td>
        <td></td>
        <td><%= link_to "Carbon intensity data CSV", data_feeds_carbon_intensity_readings_path(format: "csv") %></td>
      </tr>
      <% DarkSkyArea.all.each do |area| %>
         <tr>
          <td><%= link_to "Dark Sky Weather data for #{area.title}", data_feeds_dark_sky_temperature_readings_path(area.id) %></td>
          <td></td>
          <td><%= link_to "CSV", data_feeds_dark_sky_temperature_readings_path(area.id, format: "csv") %></td>
        </tr>
      <% end %>
      <% SolarPvTuosArea.all.each do |area| %>
         <tr>
          <td><%= link_to "Solar Pv 2 tuos data for #{area.title}", data_feeds_solar_pv_tuos_readings_path(area.id) %></td>
          <td></td>
          <td><%= link_to "CSV", data_feeds_solar_pv_tuos_readings_path(area.id, format: "csv") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
