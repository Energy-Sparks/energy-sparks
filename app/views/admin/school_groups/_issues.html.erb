<table class="table table-sorted table-striped" style="width: 100%">
  <thead>
    <tr>
      <th class="no-sort"></th>
      <th>Issue</th>
      <th>School</th>
      <th>Fuel</th>
      <th class="nowrap">Assigned to</th>
      <th>Updated</th>
      <th class="no-sort"></th>
    </tr>
  </thead>
  <tbody>
    <% school_group.school_issues.issue.status_open.by_pinned.by_updated_at.each do |issue| %>
      <tr>
        <td><%= fa_icon('exclamation-circle text-secondary') %></td>
        <td><%= link_to issue.title, admin_school_issue_path(issue.school, issue) %> <%= fa_icon('thumbtack text-secondary') if issue.pinned? %></td>
        <td><%= link_to issue.school.name, admin_school_issues_path(issue.school) %></td>
        <td><%= render 'admin/schools/issues/fuel_type', issue: issue %></td>
        <td><%= render 'admin/schools/issues/owned_by', issue: issue %></td>
        <td data-order="<%= issue.updated_at %>"><div class="badge badge-pill bg-white text-dark font-weight-normal nowrap"><%= issue.updated_by.display_name %> â€¢ <%= nice_date_times_today(issue.updated_at) %></div></td>
        <td class="nowrap text-right">
          <%= link_to 'View', admin_school_issue_path(issue.school, issue), class: "btn btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
