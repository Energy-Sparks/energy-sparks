<h1><%= t('schools.user_tariffs.show.title') %></h1>

<div class="energy_tariff">

  <% if @energy_tariff.tariff_holder.school? %>
    <p>
      <%= t('schools.user_tariffs.show.introduction_html', electricity_analysis_path: analysis_page_finder_path(urn: @tariff_holder.urn, analysis_class: 'AdviceElectricityCosts'), gas_analysis_path: analysis_page_finder_path(urn: @tariff_holder.urn, analysis_class: 'AdviceGasCosts')) %>.
    </p>
    <br/>
  <% end %>

  <%= render 'energy_tariffs/energy_tariffs/header', energy_tariff: @energy_tariff %>

  <h4 id="consumption-charges">
    <%= t('schools.user_tariffs.show.consumption_charges') %>
    <%= link_to t('common.labels.edit'), energy_tariff_prices_path(@energy_tariff), class: 'btn' %>
  </h4>

  <% if @energy_tariff.flat_rate? %>
    <%= render 'energy_tariffs/energy_tariffs/flat_rate', energy_tariff: @energy_tariff, allow_edits: false %>
  <% else %>
    <%= render 'energy_tariffs/energy_tariffs/rates_table', energy_tariff: @energy_tariff, allow_edits: false %>
  <% end %>

  <br/>

  <h4 id="standing-charges">
    <%= t('schools.user_tariffs.show.standing_charges') %>
    <%= link_to t('common.labels.edit'), energy_tariffs_path(@energy_tariff, [:energy_tariff_charges]), class: 'btn' %>
  </h4>

  <%= render 'energy_tariffs/energy_tariffs/charges_table', energy_tariff: @energy_tariff, allow_edits: false %>

  <br/>
  <br/>

  <%= link_to t('common.labels.previous'), energy_tariffs_path(@energy_tariff, [:energy_tariff_charges]), class: 'btn' %>
  <%= link_to t('common.labels.finished'), energy_tariffs_path(@energy_tariff, [], { energy_tariff_index: true }), class: 'btn' %>

  <div class="hidden">
    <% if can? :download, EnergyTariff %>
      <h4><%= t('schools.user_tariffs.show.meter_attribute_view') %></h4>
      <%= print_meter_attribute(@energy_tariff.meter_attribute) %>
    <% end %>
  </div>
</div>
