<h1><%= @energy_tariff.name %></h1>

<div class="energy_tariff">

  <% if @energy_tariff.dcc? %>
    <%= component 'notice', classes: 'mb-2', status: :neutral do |c| %>
      <div class="d-flex justify-content-between">
        <%= t('schools.user_tariffs.smart_meter_tariffs.limited_editing') %>
        <%= link_to t('schools.user_tariff_charges.edit_charges'),
          energy_tariffs_path(@energy_tariff, [:energy_tariff_charges]),
          class: 'btn btn-primary' %>
      </div>
    <% end %>
  <% end %>
  <% if @energy_tariff.tariff_holder.school? %>
    <%= component 'notice', classes: 'mb-2', status: :neutral do |c| %>
      <p>
        <%= t('schools.user_tariffs.show.introduction_html', analysis_path: analysis_page_finder_path(urn: @tariff_holder.urn, analysis_class: cost_analysis_class_for(@energy_tariff.meter_type)), meter_type: t("common.#{@energy_tariff.meter_type}").downcase) %>.
      </p>
    <% end %>
  <% end %>

  <div class="d-flex justify-content-between">
    <div>
      <h4><%= t('schools.user_tariffs.show.dates.title') %></h4>
    </div>
    <div>
      <%= link_to t('common.labels.edit'),
          energy_tariffs_path(@energy_tariff, [], { action: :edit }),
          class: 'btn', id: 'edit_dates' unless @energy_tariff.dcc?
      %>
    </div>
  </div>

  <table class="table table-charges">
    <tbody>
      <tr>
        <td class="description"><%= t('schools.user_tariffs.show.dates.start_date') %></td>
        <td class="value"><%= @energy_tariff&.start_date&.to_s(:es_compact) %></td>
      </tr>
      <tr>
        <td class="description"><%= t('schools.user_tariffs.show.dates.end_date') %></td>
        <td class="value"><%= @energy_tariff&.end_date&.to_s(:es_compact) %></td>
      </tr>
    </tbody>
  </table>

  <br/>
  <% if @energy_tariff.school? %>
    <div class="d-flex justify-content-between">
      <div>
        <h4><%= t('schools.user_tariffs.show.meters') %></h4>
      </div>
      <div>
        <%= link_to t('common.labels.edit'),
            energy_tariffs_path(@energy_tariff, [], { action: :edit_meters }),
            class: 'btn', id: 'edit_meters' unless @energy_tariff.dcc?
        %>
      </div>
    </div>
    <table class="table table-charges">
      <tbody>
        <% if @energy_tariff.meters.empty? %>
          <tr>
            <td class="description"><%= t('schools.user_tariffs.meters.all_meters', meter_type: @energy_tariff.meter_type) %></td>
            <td class="value"></td>
          </tr>
        <% end %>
        <% @energy_tariff.meters.each do |meter| %>
          <tr>
            <td class="description"><%= meter.mpan_mprn_and_name %></td>
            <td class="value"></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br/>
  <% end %>

  <div class="d-flex justify-content-between" id="consumption-charges">
    <div>
      <h4><%= t('schools.user_tariffs.show.consumption_charges') %></h4>
    </div>
    <div>
      <%= link_to t('common.labels.edit'),
        energy_tariff_prices_path(@energy_tariff),
        class: 'btn' unless @energy_tariff.dcc?
      %>
    </div>
  </div>

  <% if @energy_tariff.flat_rate? %>
    <%= render 'energy_tariffs/energy_tariffs/flat_rate', energy_tariff: @energy_tariff, allow_edits: false %>
  <% else %>
    <%= render 'energy_tariffs/energy_tariffs/rates_table', energy_tariff: @energy_tariff, allow_edits: false %>
  <% end %>

  <br/>

  <div class="d-flex justify-content-between" id="standing-charges">
    <div>
      <h4><%= t('schools.user_tariffs.show.standing_charges') %></h4>
    </div>
    <div>
      <%= link_to t('common.labels.edit'),
        energy_tariffs_path(@energy_tariff, [:energy_tariff_charges]),
        class: 'btn' unless @energy_tariff.dcc? %>
    </div>
  </div>

  <%= render 'energy_tariffs/energy_tariffs/charges_table', energy_tariff: @energy_tariff, allow_edits: false %>
  <br />

  <% if current_user.admin? %>
    <div class="d-flex justify-content-between">
      <div>
        <h4><%= t('schools.user_tariffs.show.notes_html') %></h4>
      </div>
    </div>
    <div>
      <table class="table table-charges">
        <tbody>
          <tr>
            <td class="description"><%= t('schools.user_tariffs.show.created_at') %></td>
            <td class="value"><%= @energy_tariff.created_at&.to_s(:es_compact) %></td>
          </tr>
          <tr>
            <td class="description"><%= t('schools.user_tariffs.show.created_by') %></td>
            <td class="value"><%= @energy_tariff&.created_by&.display_name %></td>
          </tr>
          <tr>
            <td class="description"><%= t('schools.user_tariffs.show.updated_at') %></td>
            <td class="value">
              <%= @energy_tariff&.updated_at&.to_s(:es_compact) %>
            </td>
          </tr>
          <tr>
            <td class="description"><%= t('schools.user_tariffs.show.updated_by') %></td>
            <td class="value"><%= @energy_tariff&.updated_by&.display_name %></td>
          </tr>
        </tbody>
      </table>
    </div>
  <% end %>

  <br/>
  <br/>

  <%= link_to t('common.labels.previous'), energy_tariffs_path(@energy_tariff, [:energy_tariff_charges]), class: 'btn' %>
  <%= link_to t('common.labels.finished'), energy_tariffs_path(@energy_tariff, [], { energy_tariff_index: true }), class: 'btn' %>

  <div class="hidden">
    <% if can? :download, EnergyTariff %>
      <h4><%= t('schools.user_tariffs.show.meter_attribute_view') %></h4>
      <%= print_meter_attribute(@energy_tariff.meter_attribute) %>
    <% end %>
  </div>
</div>
