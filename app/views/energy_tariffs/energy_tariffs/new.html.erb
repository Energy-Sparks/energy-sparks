<h1><%= t('schools.user_tariffs.new.title', fuel_type: t("common.#{@energy_tariff.meter_type}")) %></h1>

<div class="energy_tariff">
  <%= render 'energy_tariffs/energy_tariffs/meters', energy_tariff: @energy_tariff if @energy_tariff.tariff_holder_type == 'School' %>
  <br/>

  <%= simple_form_for @energy_tariff.tariff_holder_route + [@energy_tariff] do |f| %>
    <%= f.hidden_field :meter_type, value: @energy_tariff.meter_type if @energy_tariff.tariff_holder_type == 'School' %>
    <%= f.hidden_field :tariff_type, value: @energy_tariff.tariff_type if @energy_tariff.tariff_holder_type == 'School' %>
    <% @energy_tariff.meters.each do |meter| %>
      <%= f.hidden_field :meter_ids, value: meter.id, multiple: true %>
    <% end %>
    <%= render 'form', energy_tariff: @energy_tariff, f: f %>
  <% end %>
</div>
