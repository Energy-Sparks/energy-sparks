<h1><%= t('schools.user_tariffs.edit_dates.title') %></h1>

<div class="energy_tariff">
  <%= simple_form_for :energy_tariff, url: energy_tariffs_path(@energy_tariff, [], { action: :update_dates }), method: :post do |f| %>
    <div class="col-md-12">
      <%= render 'form_dates', f: f %>
    </div>
    <br/>
    <%= submit_tag t('common.labels.submit'), class: 'btn btn-info' %>
  <% end %>
</div>
