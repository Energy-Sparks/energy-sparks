<% url = case @energy_tariff.tariff_holder_type
         when 'School' then school_energy_tariff_energy_tariff_differential_prices_path(@school, @energy_tariff)
         when 'SiteSettings' then admin_settings_energy_tariff_energy_tariff_differential_prices_path(@energy_tariff)
         end
%>

<%= simple_form_for @energy_tariff_price, url: url, remote: true do |f| %>
  <%= render 'form', school: @school, energy_tariff: @energy_tariff, energy_tariff_price: @energy_tariff_price, f: f %>
<% end %>
