<% if I18n.locale.to_s == 'cy' && programme_type.t_attached(:image, :cy).present? %>
  <%= image_tag programme_type.image_cy, class: "card-img-top img-fluid " + css_class %>
<% elsif programme_type.t_attached(:image, :en).present? %>
  <%= image_tag programme_type.image_en, class: "card-img-top img-fluid " + css_class %>
<% else %>
  <%= image_tag "placeholder300x200.png", class: "card-img-top img-fluid " + css_class %>
<% end %>
