<div class="card-deck">
  <% activity_types.each do |activity_type| %>
    <div class="card">

      <%= link_to activity_type_path(activity_type) do %>
        <img class="card-img-top img-fluid" src="holder.js/286x150" alt="Card image cap">
      <% end %>

      <div class="card-body">
        <p class="card-text">
          <%= activity_type.name %>
        </p>
      </div>
      <div class="card-footer" style="border-top: none; background-color: white;">
        <% activity_type.subjects.each do |subject| %>
          <span class="badge badge-pill badge-primary"><%= subject.name %></span>
        <% end %>
      </div>
      <div class="card-footer" style="border-top: none; background-color: white;">
        <% activity_type.key_stages.each do |key_stage| %>
          <span class="badge badge-pill badge-info"><%= key_stage.name %></span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
