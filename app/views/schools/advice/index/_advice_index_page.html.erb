<% content_for :page_title, "#{t('advice_pages.index.title')} | #{school.name}" %>

<div class="advice-page-breadcrumb">
  <%= component 'breadcrumbs' do |c| %>
    <% c.with_school(school) %>
    <% c.with_items( advice_index_breadcrumbs(school, tab)) %>
  <% end %>
</div>
<h1><%= t('advice_pages.index.title') %></h1>

<div class="row">
  <div class="col-md-3 col-lg-3 col-xl-2 advice-page-nav">
    <%= render 'schools/advice/nav', school: school, advice_pages: advice_pages %>
  </div>
  <div class="col-md-9 col-lg-9 col-xl-10 advice-page-tabs">
    <%= render 'schools/advice/index/advice_index_tabs', school: school, tab: tab, priority_count: priority_count, alert_count: alert_count %>
    <div class="mt-4" id="<%= tab %>-<%= tab %>">
      <%= yield %>
    </div>
  </div>
</div>
