<%= render 'schools/advice/section_title',
           section_id: 'current',
           section_title: t("advice_pages.#{@advice_page.fuel_type}_meter_breakdown.insights.current_usage.title") %>

<%= render 'schools/advice/meter_breakdown/usage_breakdown_table',
           fuel_type: @advice_page.fuel_type,
           summary: true,
