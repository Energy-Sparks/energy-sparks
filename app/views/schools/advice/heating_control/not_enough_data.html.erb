<%= render 'schools/advice/advice_page',
           school: @school,
           advice_pages: @advice_pages,
           advice_page: @advice_page,
           tab: @tab,
           data_warning: nil do %>
  <h2>
    <%= render PageNavComponent::CollapseButton.new(display: 'inline') %>
    <%= t('advice_pages.heating_control.not_enough_data.title') %>
  </h2>
  <p>
    <%= t('advice_pages.heating_control.not_enough_data.p1') %>
    <ul>
      <li><%= t('advice_pages.heating_control.not_enough_data.p1_li1') %></li>
      <li><%= t('advice_pages.heating_control.not_enough_data.p1_li2') %></li>
      <li><%= t('advice_pages.heating_control.not_enough_data.p1_li3') %></li>
    </ul>
  </p>
  <% if @analysable.data_available_from.present? %>
    <p>
      <%= t('advice_pages.not_enough_data.available_from',
            available_from: @analysable.data_available_from.to_fs(:es_short)) %>
    </p>
  <% end %>
  <p>
    <%= t('advice_pages.heating_control.not_enough_data.p2') %>
    <ul>
      <li><%= t('advice_pages.heating_control.not_enough_data.p2_li1_html',
                gas_recent_changes_analysis_school_advice_path:) %></li>
      <li><%= t('advice_pages.heating_control.not_enough_data.p2_li2_html',
                gas_recent_changes_analysis_school_advice_path:) %></li>
      <li><%= t('advice_pages.heating_control.not_enough_data.p2_li3_html',
                gas_out_of_hours_analysis_school_advice_path:) %></li>
    </ul>
  </p>
<% end %>
