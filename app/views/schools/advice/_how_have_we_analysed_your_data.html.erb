  <%= t('advice_pages.how_have_we_analysed_your_data.your_electricity_tariffs_html',
      last_change_date: short_dates(@economic_tariffs_change_caveats.last_change_date),
      rate_before_gbp_per_kwh: format_unit(@economic_tariffs_change_caveats.rate_before_£_per_kwh, :£),
