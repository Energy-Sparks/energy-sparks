<h4><strong><%= t('advice_pages.how_have_we_analysed_your_data.energy_data') %></strong></h4>
<% if @advice_page.fuel_type %>
  <p>
    <%= t('advice_pages.how_have_we_analysed_your_data.calculations_based_on_fuel_type', fuel_type: I18n.t("common.#{@advice_page.fuel_type}"), start_date: short_dates(@analysis_dates&.start_date), end_date: short_dates(@analysis_dates&.end_date)) %>
  </p>
<% else %>
  <table class="table table-sm">
    <thead class="thead-dark">
      <th class="text-left"><%= t('advice_pages.how_have_we_analysed_your_data.total_energy_use_table.columns.fuel_type') %></th>
      <th class="text-right"><%= t('advice_pages.how_have_we_analysed_your_data.total_energy_use_table.columns.aggregated_meter_date_range') %></th>
    </thead>
    <tbody>
      <% @overview_data&.table_date_ranges&.each do |fuel_type, date_range| %>
        <tr>
          <td class="text-left"><%= t("common.#{fuel_type}") %></td>
          <td class="text-right"><%= date_range[:start_date] %> - <%= date_range[:end_date] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<h4><strong><%= t('advice_pages.how_have_we_analysed_your_data.school_characteristics') %></strong></h4>
<p><%= t('advice_pages.how_have_we_analysed_your_data.school_characteristics_introduction') %>.</p>
<table class="table table-sm">
  <thead class="thead-dark">
    <th class="text-left"><%= t('advice_pages.how_have_we_analysed_your_data.school_characteristics_table.columns.characteristic') %></th>
    <th class="text-left"><%= t('advice_pages.how_have_we_analysed_your_data.school_characteristics_table.columns.value') %></th>
  </thead>
  <tbody>
    <tr>
      <td class="text-left"><%= t('advice_pages.how_have_we_analysed_your_data.school_characteristics_table.rows.floor_area') %></td>
      <td class="text-left"><%= @school.floor_area %>m<sup>2</sup></td>
    </tr>
    <tr>
      <td class="text-left"><%= t('advice_pages.how_have_we_analysed_your_data.school_characteristics_table.rows.location') %></td>
      <td class="text-left"><%= @school.full_location_to_s %></td>
    </tr>
    <tr>
      <td class="text-left"><%= t('advice_pages.how_have_we_analysed_your_data.school_characteristics_table.rows.pupils') %></td>
      <td class="text-left"><%= @school.number_of_pupils %></td>
    </tr>
    <tr>
      <td class="text-left"><%= t('advice_pages.how_have_we_analysed_your_data.school_characteristics_table.rows.type') %></td>
      <td><%= t("common.school_types.#{@school.school_type}") %></td>
    </tr>
  </tbody>
</table>

