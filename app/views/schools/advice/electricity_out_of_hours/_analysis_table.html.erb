<table class="table table-sm">
  <thead class="thead-dark">
    <tr>
      <th class="text-left-">
        <%= t('advice_pages.electricity_out_of_hours.analysis.last_twelve_months.table.time_of_day') %>
      </th>
      <th class="text-right">
        <%= t('kwh') %>
      </th>
      <th class="text-right">
        <%= t('advice_pages.electricity_out_of_hours.analysis.last_twelve_months.table.gbp_at_current_tariff') %>
      </th>
      <th class="text-right">
        <%= t('advice_pages.electricity_out_of_hours.analysis.last_twelve_months.table.co2_kg') %>
      </th>
      <th class="text-right">
        <%= t('advice_pages.electricity_out_of_hours.analysis.last_twelve_months.table.percent') %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @usage_categories.each do |usage_category| %>
      <tr>
        <td><%= usage_category %></td>
        <td class="text-right">
          <%= format_unit(@annual_usage_breakdown.send(usage_category).kwh, :kw) %>
        </td>
        <td class="text-right">
          <%= format_unit(@annual_usage_breakdown.send(usage_category).£, :£) %>
        </td>
        <td class="text-right">
          <%= format_unit(@annual_usage_breakdown.send(usage_category).co2, :co2) %>
        </td>
        <td class="text-right">
          <%= format_unit(@annual_usage_breakdown.send(usage_category).percent, :percent) %>
        </td>
      </tr>
    <% end %>
    <tr>
    </tr>
  </tbody>
</table>
