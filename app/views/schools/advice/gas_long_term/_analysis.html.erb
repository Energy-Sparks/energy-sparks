<p><%= t('advice_pages.gas_long_term.analysis.summary') %></p>

<p><%= t('advice_pages.gas_long_term.analysis.degree_days') %></p>

<p><%= t('advice_pages.gas_long_term.analysis.sections') %></p>

<ul>
  <li><%= link_to(t('advice_pages.gas_long_term.analysis.recent_trend.title'), '#recent-trend') %></li>
  <li><%= link_to(t('advice_pages.gas_long_term.analysis.comparison.title'), '#comparison') %></li>
  <% if @analysis_dates.months_of_data > 12 %>
    <li><%= link_to(t('advice_pages.gas_long_term.analysis.long_term_trends.title'), '#long-term-trends') %></li>
  <% end %>
  <% if @multiple_meters %>
    <li><%= link_to(t('advice_pages.gas_long_term.analysis.meter_breakdown.title'), '#meter-breakdown') %></li>
  <% end %>
</ul>

<%= render 'recent_trend', school: @school, analysis_dates: @analysis_dates, annual_usage: @annual_usage, vs_exemplar: @vs_exemplar, estimated_savings_vs_exemplar: @estimated_savings_vs_exemplar %>
<%= render 'analysis_comparison', school: @school, analysis_dates: @analysis_dates, annual_usage: @annual_usage, vs_benchmark: @vs_benchmark, vs_exemplar: @vs_exemplar, estimated_savings_vs_exemplar: @estimated_savings_vs_exemplar, estimated_savings_vs_benchmark: @estimated_savings_vs_benchmark %>
<%= render 'long_term_trend', school: @school, analysis_dates: @analysis_dates %>

<% if @multiple_meters %>
  <%= render 'meter_breakdown', school: @school, analysis_dates: @analysis_dates, meters_for_breakdown: @meters_for_breakdown, annual_usage_meter_breakdown: @annual_usage_meter_breakdown %>
<% end %>
