  <% c.with_section do |s| %>
    <% s.with_item(name: 'Total energy use', href: '#') %>
  <% end %>
  <% c.with_section(name: "Electricity", icon: 'bolt', classes: 'bg-electric-light', visible: @school.has_electricity?) do |s| %>
    <% s.with_item(name: 'Baseload', href: school_advice_baseload_path(@school)) %>
  <% end %>
  <% c.with_section(name: "Gas", icon: 'fire', classes: 'bg-gas-light', visible: @school.has_gas?) do |s| %>
  <% end %>
  <% c.with_section(name: "Storage heaters", icon: 'window-maximize', classes: 'bg-storage-light', visible: @school.has_storage_heaters?) do |s| %>
  <% end %>
  <% c.with_section(name: "Solar", icon: 'sun', classes: 'bg-solar-light', visible: @school.has_solar_pv?) do |s| %>
  <% end %>
  <% c.with_section(name: "Carbon", icon: 'cloud-download-alt', classes: 'bg-carbon-light') do |s| %>
  <% end %>
<% end %>
