<%= render 'schools/advice/index/advice_index_page', school: @school, advice_pages: @advice_pages, tab: @tab, priority_count: @priority_count, alert_count: @alert_count do %>
  <div class="row mt-4">
    <div class="col">
      <h2><%= t('advice_pages.index.show.title')%></h2>
      <p>
        <%= t('advice_pages.index.show.intro') %>
      </p>
      <p>
        <%= t('advice_pages.index.show.page_contents') %>
      </p>
      <%= component 'notice', status: :neutral do |c| %>
        <% c.with_link { link_to t('advice_pages.index.show.notice_link'), insights_school_advice_total_energy_use_path(@school) } %>
        <%= t('advice_pages.index.show.notice_html') %>
      <% end %>
    </div>
  </div>
  <% AdvicePage.fuel_types.keys.each do |fuel_type| %>
    <% if fuel_type == 'solar_pv' || school_has_fuel_type?(@school, fuel_type) %>
      <div class="row mt-4">
        <div class="col">
          <h3>
            <span class="<%=fuel_type_class(fuel_type)%>">
              <%= fa_icon( fuel_type_icon(fuel_type) ) %>
            </span>
            <%= t("advice_pages.nav.sections.#{fuel_type}") %>
          </h3>
          <% @advice_pages.where(fuel_type: fuel_type).each do |ap| %>
            <div class="mt-4 row d-flex align-items-center" style="">
              <div class="col">
                <h4><%= link_to t("advice_pages.nav.pages.#{ap.key}"), advice_page_path(@school, ap) %></h4>
              </div>
              <div class="col">
                <%= t("advice_pages.index.show.page_summary.#{ap.key}") %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
