<%= render 'schools/advice/index/advice_index_page', school: @school, advice_pages: @advice_pages, tab: @tab, priority_count: @priority_count, alert_count: @alert_count do %>
  <div class="row mt-4">
    <div class="col">
      <h2><%= t('advice_pages.index.show.title')%></h2>
      <%= component 'prompt', status: :none do |c| %>
        <% c.with_link { link_to t('advice_pages.index.show.notice_link'), priorities_school_advice_path(@school) } %>
        <%= t('advice_pages.index.show.notice_html') %>
      <% end %>
    </div>
  </div>

  <% if Flipper.enabled?(:new_dashboards_2024, current_user) %>
    <%= component 'advice_page_list', school: @school %>
  <% else %>
    <%= render 'schools/advice/index/page_list', school: @school, advice_pages: @advice_pages, advice_page_benchmarks: @advice_page_benchmarks %>
  <% end %>
<% end %>
