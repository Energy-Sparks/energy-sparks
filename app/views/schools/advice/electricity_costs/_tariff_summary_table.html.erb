<p>
  <%= advice_t('electricity_costs.analysis.tariff_table.intro') %>
</p>
<table class="table advice-table">
  <thead>
    <tr>
      <th><%= advice_t('electricity_costs.analysis.tariff_table.columns.name') %></th>
      <th><%= advice_t('electricity_costs.analysis.tariff_table.columns.period') %></th>
      <th><%= advice_t('electricity_costs.analysis.tariff_table.columns.source') %></th>
    </tr>
  </thead>
  <tbody>
    <% tariffs.each do |period, summary| %>
      <tr>
        <td>
          <% if summary.user_tariff %>
            <%= link_to summary.name, school_user_tariff_path(school, summary.user_tariff) %>
          <% else %>
            <%= summary.name %>
          <% end %>
        </td>
        <td><%= short_dates(period.begin) %> - <%= short_dates(period.end) %></td>
        <td><%= summary.real ? advice_t('electricity_costs.analysis.tariff_table.labels.user_supplied') : advice_t('electricity_costs.analysis.tariff_table.labels.default') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
