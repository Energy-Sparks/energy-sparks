<%= render 'schools/advice/section_title',
           section_id: 'meter-breakdown',
           section_title: t('advice_pages.electricity_long_term.analysis.meter_breakdown.title') %>

<p><%= t('advice_pages.electricity_long_term.analysis.meter_breakdown.summary') %></p>

<%= component 'chart', chart_type: :group_by_week_electricity_meter_breakdown_one_year, school: school do |c| %>
  <% c.with_title do
       t('advice_pages.electricity_long_term.charts.group_by_week_electricity_meter_breakdown_one_year.title')
     end %>
  <% c.with_subtitle do
       t('advice_pages.electricity_long_term.charts.group_by_week_electricity_meter_breakdown_one_year.subtitle')
     end %>
  <% c.with_header do %>
    <p><%= t('advice_pages.electricity_long_term.charts.group_by_week_electricity_meter_breakdown_one_year.header') %></p>
  <% end %>
<% end %>

<%= render 'schools/advice/meter_breakdown/meter_breakdown_table',
           fuel_type: fuel_type,
           school: school,
           analysis_dates: analysis_dates,
           meters_for_breakdown: meters_for_breakdown,
           annual_usage_meter_breakdown: annual_usage_meter_breakdown %>

<p><%= t('advice_pages.electricity_long_term.analysis.meter_breakdown.table_explanation') %></p>
