<div class="modal" tabindex="-1" id="live-data-timeout-modal" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><span class="event-action"></span><%= t('schools.live_data.timeout_modal.still_watching_your_live_data_usage') %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= t('schools.live_data.timeout_modal.temporarily_paused_message_html', timeout_interval: timeout_interval) %>.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn" data-dismiss="modal"><%= t('common.labels.restart') %></button>
      </div>
    </div>
  </div>
</div>
