<thead>
  <tr><th colspan="9"><%= title %></th></tr>
</thead>
<tbody>
  <% if alerts.empty? %>
    <tr>
      <td colspan="9">No alerts</td>
    </tr>
  <% else %>
    <% alerts.each do |alert| %>
      <tr scope="row">
        <td><%= fa_icon(alert_icon(alert)) %> <%= alert.display_fuel_type %></td>
        <td><%= link_to alert.title, school_alert_path(school, alert) %></td>
        <td class="text-white <%= class_for_boolean(alert.displayable) %>"><%= y_n alert.displayable %></td>
        <td><%= alert.formatted_rating %></td>
        <td><%= y_n alert.analytics_valid %></td>
        <td><%= alert.enough_data %></td>
        <td><%= alert.relevance %></td>
        <td><%= nice_dates alert.run_on %></td>
        <td><%= nice_date_times alert.created_at %></td>
      </tr>
    <% end %>
  <% end %>
</tbody>
