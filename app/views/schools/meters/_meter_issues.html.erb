<div>
  <button type="button" class="btn btn-sm text-nowrap" data-toggle="modal" data-target="#meter-issues-<%= meter.id %>">
    <%= t("schools.meters.meter_issues.button") %> <%= render 'admin/issues/counters', issues_count: meter.issues.issue.count, notes_count: meter.issues.note.count %>
  </button>
  <div class="modal fade" id="meter-issues-<%= meter.id %>" tabindex="-1" role="dialog" aria-labelledby="#meter-issues-<%= meter.id %>-title" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="meter-issues-<%= meter.id %>-title"><%= t("schools.meters.meter_issues.title", name: meter.display_name) %></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body py-0">
          <div class="p-2">
            <% if meter.issues.any? %>
              <% meter.issues.by_priority_order.each do |issue| %>
                <%= render 'admin/issues/issue', issue: issue, expand: true %>
              <% end %>
            <% else %>
              <%= t("schools.meters.meter_issues.no_meter_issues") %>
            <% end %>
          </div>
        </div>
        <div class="modal-footer">
          <%= render 'admin/issues/new_issues_links', issueable: meter.school, meter_ids: [meter.id] unless local_assigns[:hide_new] %>
          <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal"><%= t('common.labels.close') %></button>
        </div>
      </div>
    </div>
  </div>
</div>
