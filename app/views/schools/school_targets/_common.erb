<% content_for :page_title, page_title %>
<% content_for :dashboard_header do %>
  <div class="d-flex justify-content-between align-items-center">
    <h1><%= heading %></h1>
    <div><%= link_to_help_for_feature :school_targets, css: 'btn btn-default' %></div>
  </div>
<% end %>
<div class="container">
  <div class="row mt-2">
    <div class="col-md-3 col-lg-3 col-xl-2 advice-page-nav">
      <%= render 'schools/advice/nav', school: @school, advice_pages: @advice_pages %>
    </div>
    <div class="col-md-9 col-lg-9 col-xl-10">
      <div class="row">
        <div class="col-md-8">
          <%= yield :pre %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8">
          <h3><%= subheading %></h3>
          <%= yield :after_subheading %>
          <%= render 'fuel_type_note' %>
          <% form_intro if defined? form_intro %>
          <%= render 'form', target_service: @target_service, school_target: @school_target %>
        </div>
      </div>
      <%= yield :extra_row %>
    </div>
  </div>
</div>
