<% content_for :page_title, t('schools.school_targets.new.page_title') %>

<% if Flipper.enabled?(:new_dashboards_2024, current_user) %>
  <% content_for :dashboard_header do %>
    <div class="d-flex justify-content-between align-items-center">
      <h1><%= t('schools.school_targets.new.review_and_set_your_next_energy_saving_target') %></h1>
      <div>
        <%= link_to_help_for_feature :school_targets, css: 'btn btn-default' %>
      </div>
    </div>
  <% end %>
  <div class="container">
    <div class="row mt-2">
      <div class="col-md-3 col-lg-3 col-xl-2 advice-page-nav">
        <%= render 'schools/advice/nav', school: @school, advice_pages: @advice_pages %>
      </div>
      <div class="col-md-9 col-lg-9 col-xl-10">
        <%= render 'new' %>
      </div>
    </div>
  </div>
<% else %>
  <div class="d-flex justify-content-between align-items-center">
    <h1><%= t('schools.school_targets.new.review_and_set_your_next_energy_saving_target') %></h1>
    <div>
      <%= link_to_help_for_feature :school_targets, css: 'btn btn-default' %>
    </div>
  </div>

  <%= render 'new' %>
<% end %>
