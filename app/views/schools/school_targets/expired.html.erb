<% content_for :page_title, 'Your energy saving target' %>

<%= render "title", school_target: @school_target %>

<div class="row">
  <div class="col">
    <p>
      You set a target to reduce your energy usage by <%= @school_target.target_date.strftime("%B %Y") %>. It's now time to review your progress and <%= link_to "set a new target", new_school_school_target_path(@school_target.school) %>.
    </p>
  </div>
</div>

<% if @school_target.report_last_generated.present? %>
  <%= render "target_table", school_target: @school_target, progress_summary: @progress_summary %>
<% end %>
  <div class="pt-4"></div>

<%= render 'target_timeline', school: @school, observations: @observations %>
