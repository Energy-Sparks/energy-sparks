<table class="table table-charges">
  <tbody>
  <% if user_tariff.user_tariff_charges.any? %>
    <% user_tariff.user_tariff_charges.each do |user_tariff_charge| %>
      <tr>
        <td class="description"><%= user_tariff_charge_type_description(user_tariff_charge.charge_type) %></td>
        <td class="value"><%= user_tariff_charge_value(user_tariff_charge) %></td>
      </tr>
    <% end %>
  <% end %>
  <% if user_tariff.tnuos? %>
    <tr>
      <td class="description"><%= t('schools.user_tariffs.charges_table.tnuos') %></td>
      <td class="value"><%= y_n(user_tariff.tnuos?)  %></td>
    </tr>
  <% end %>
  <tr>
    <td class="description"><%= t('schools.user_tariffs.charges_table.vat_rate') %></td>
    <td class="value"><%= user_tariff.vat_rate  %></td>
  </tr>
  <% if user_tariff.ccl? %>
    <tr>
      <td class="description"><%= t('schools.user_tariffs.charges_table.climate_charge_levy') %></td>
      <td class="value"><%= y_n(user_tariff.ccl?)  %></td>
    </tr>
  <% end %>
  </tbody>
</table>
