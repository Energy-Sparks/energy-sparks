<div class="row">
  <div class="col-md-3">
    <p><%= t('mailchimp_signups.mailchimp_form.email_preferences') %></p>
    <ul class="list-unstyled">
      <% @email_types.each do |email_type| %>
        <li>
          <div class="custom-control custom-checkbox">
            <%= check_box_tag "interests[#{email_type.id}]", 'true', true, class: 'custom-control-input' %>
            <%= label_tag "interests[#{email_type.id}]", email_type.i18n_name, class: 'custom-control-label' %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="col-md-9">
    <p><%= t('schools.users.auto_subscribe_newsletter.newsletters_main_communication_channel') %>:</p>
    <ul>
      <li><%= t('schools.users.auto_subscribe_newsletter.newsletters_main_communication_channel_list_item_1') %></li>
      <li><%= t('schools.users.auto_subscribe_newsletter.newsletters_main_communication_channel_list_item_2') %></li>
      <li><%= t('schools.users.auto_subscribe_newsletter.newsletters_main_communication_channel_list_item_3') %></li>
      <li><%= t('schools.users.auto_subscribe_newsletter.newsletters_main_communication_channel_list_item_4') %></li>
    </ul>
    <p><%= t('schools.users.auto_subscribe_newsletter.we_strongly_recommend_you_sign_up') %>.</p>
  </div>
</div>
