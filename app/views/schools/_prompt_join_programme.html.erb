<% if school %>
  <% if programme_type = school.suggested_programme_types.first %>
    <%= component 'info_bar',
        status: :neutral,
        style: local_assigns[:style],
        title: t("schools.prompts.join_programme.message_html", count: programme_type.activity_count, title: programme_type.title),
        icon: image_tag(programme_type.t_attached_or_default(:image, placeholder: "placeholder300x200.png"), class: "img-fluid"),
        buttons: { t("schools.prompts.join_programme.start") => programme_type_path(programme_type) }
    %>
  <% end %>
<% end %>