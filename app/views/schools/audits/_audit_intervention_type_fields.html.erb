<div class="nested-fields">
  <div class="row">
    <div class="col-md-5 mb-3">
      <%= f.select(
              :intervention_type_id,
              grouped_options_for_select(
                  InterventionTypeGroup.listed_with_intervention_types.map{|category, types| [category.title, types.map {|type| [type.name, type.id]}]},
                  f.object.intervention_type_id
              ),
              { include_blank: true },
              { class: 'form-control select2'}
          )
      %>
      <%= f.error 'intervention_type', id: 'intervention_type_error' %>
    </div>
    <div class="col-md-5 mb-3">
      <%= f.text_area :notes, label: false, class: 'form-control select2' %>
    </div>
    <div class="col-md-2 mb-3">
      <%= link_to_remove_association 'Remove', f, class: 'btn' %>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    if ($("form#audit_form").length) {
      $('select.form-control.select2').select2({theme: 'bootstrap'});
    }
  });
</script>
