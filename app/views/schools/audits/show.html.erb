<h1><%= @audit.title %></h1>

<h2>Description</h2>
<p><%= @audit.description %></p>

<h2>Report</h2>
<% if @audit.file.attached? %>
  <%= link_to 'Report', url_for(@audit.file), target: '_blank' %>
<% else %>
  No report
<% end %>

<br/>
<br/>

<h2>Activities</h2>
<ol class="activities">
  <% @audit.audit_activity_types.by_name.each do |audit_activity_type| %>
    <li>
      <%= link_to audit_activity_type.activity_name, activity_type_path(audit_activity_type.activity_type) %>
      <%= " (#{audit_activity_type.notes})" if audit_activity_type.notes.present? %>
    </li>
  <% end %>
</ol>

<h2>Interventions</h2>
<ol class="activities">
  <% @audit.audit_intervention_types.by_title.each do |audit_intervention_type| %>
    <li>
      <%= link_to audit_intervention_type.intervention_title, intervention_type_path(audit_intervention_type.intervention_type) %>
      <%= " (#{audit_intervention_type.notes})" if audit_intervention_type.notes.present? %>
    </li>
  <% end %>
</ol>

<br/>
<br/>

<p><%= link_to 'All audits', school_audits_path(@school), class: 'btn btn-primary' %></p>
