  <div class="nested-fields">
  <%= f.hidden_field :id, value: f.object.id %>
      <div class="row">
        <%= f.hidden_field :usage_type, value: "community_use" %>

        <div class="col-md-3 mb-3">
          <%= f.select :day, options_for_select([["Choose day", ""]] + SchoolTime.days.map {|key, value| [key.titleize, SchoolTime.days.key(value)]}, f.object.day), {required: :true}, { class: 'form-control' } %>
        </div>

        <div class="col-md-3 mb-3">
          <%= f.text_field :opening_time, value: format_school_time(f.object.opening_time || 0), id: "#{f.object.day}-opening_time" %>
          <% if f.object.errors.has_key?(:opening_time) %>
            <div class="alert alert-danger mt-2">
              <%= f.object.errors.full_messages_for(:opening_time).join(', ') %>
            </div>
          <% end %>
        </div>
        <div class="col-md-3 mb-3">
          <%= f.text_field :closing_time, value: format_school_time(f.object.closing_time || 0), id: "#{f.object.day}-closing_time" %>
          <% if f.object.errors.has_key?(:closing_time) %>
            <div class="alert alert-danger mt-2">
              <%= f.object.errors.full_messages_for(:closing_time).join(', ') %>
            </div>
          <% end %>
        </div>
        <div class="col-md-1 mb-3">
          <div class="form-check">
          <%= f.check_box :term_time_only, checked: f.object.term_time_only, class: 'form-check-input position-static' %>
          </div>
        </div>
        <div class="col-md-2 mb-3">
          <%= link_to_remove_association 'Remove', f, class: 'btn' %>
        </div>
      </div>
  </div>
