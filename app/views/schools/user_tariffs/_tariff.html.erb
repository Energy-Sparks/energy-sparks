<div id="accordion<%= user_tariff.id %>" class="accordion-block">
  <div class="card">
    <div class="card-header" id="heading<%= user_tariff.id %>">
      <h5 class="mb-0">
        <a class="nav-link collapsed" data-toggle="collapse" data-target="#collapse<%= user_tariff.id %>" href="#collapse<%= user_tariff.id %>" role="button" aria-expanded="false" aria-controls="multiCollapseExample1">
          <%= user_tariff_title(user_tariff, true) %>
          <%= button_tag t('common.labels.view'), class: 'btn right user-tariff-show-button' %>
        </a>
      </h5>
    </div>
    <div id="collapse<%= user_tariff.id %>" class="collapse" aria-labelledby="heading<%= user_tariff.id %>" data-parent="#accordion<%= user_tariff.id %>">
      <div class="card-body">
        <table class="table table-charges">
          <tbody>
            <tr>
              <td class="description"><%= t('schools.user_tariffs.tariff_partial.type') %></td>
              <td class="value"><%= user_tariff.flat_rate ? t('schools.user_tariffs.tariff_partial.simple_tariff') : t('schools.user_tariffs.tariff_partial.day_night_tariff') %></td>
            </tr>
            <tr>
              <td class="description"><%= t('schools.user_tariffs.tariff_partial.start_date') %></td>
              <td class="value"><%= user_tariff.start_date.to_s(:es_compact) %></td>
            </tr>
            <tr>
              <td class="description"><%= t('schools.user_tariffs.tariff_partial.end_date') %></td>
              <td class="value"><%= user_tariff.end_date.to_s(:es_compact) %></td>
            </tr>
            <tr>
              <% if user_tariff.user_tariff_prices.any? %>
                <td class="description">Consumption charges</td>
                <td class="value nowrap">
                  <% user_tariff.user_tariff_prices.each do |price| %>
                    <%= t('schools.user_tariffs.tariff_partial.price_from_to', price_start_time: price.start_time.to_s(:time), price_end_time: price.end_time.to_s(:time)) if !user_tariff.flat_rate %>
                    <%= number_to_currency(user_tariff.user_tariff_prices.first.value, unit: 'Â£') %> <%= t('schools.user_tariffs.tariff_partial.per_kwh') %>
                    <br/>
                  <% end %>
                </td>
              <% else %>
                <td colspan='10'><%= t('schools.user_tariffs.tariff_partial.no_consumption_charges_have_been_set_yet') %></td>
              <% end %>
            </tr>
          </tbody>
        </table>

        <br/>

        <div class="padded-row">
          <%= link_to t('schools.user_tariffs.tariff_partial.full_details'), school_user_tariff_path(school, user_tariff), class: 'btn' if can? :download, UserTariff %>
          <%= link_to t('common.labels.edit'), edit_school_user_tariff_path(school, user_tariff), class: 'btn' %>
          <%= link_to t('common.labels.delete'), school_user_tariff_path(school, user_tariff), method: :delete, data: {confirm: t('common.confirm') }, class: 'btn btn-danger' %>
        </div>
      </div>
    </div>
  </div>
</div>
