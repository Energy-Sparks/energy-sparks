<% content_for :page_title, "#{@school.name} " + t('interventions.show.page_title') %>

<div class="row">
  <div class="col-md-12">
    <h1><%= @observation.intervention_type.name %></h1>
    <p class="text-muted">
      <span>
        <%= link_to @school.name, school_path(@school) %>, <%= @observation.at.strftime('%A, %d %B %Y') %>
      </span>
      <br>
      <span class="badge badge-success"
            data-toggle="tooltip"
            data-placement="bottom" title="<%= t('activities.show.score_awarded_for_this_activity') %>">
            <%= t('common.points_html', count: @observation.points) %>
      </span>
      <% if @observation.pupil_count %>
        <span class="badge badge-info"
              data-toggle="tooltip"
              data-placement="bottom" title="<%= t('interventions.show.pupils_involved_in_this_activity') %>">
              <%= t('common.pupil_count', count: @observation.pupil_count) %>
        </span>
      <% end %>
      <span class="badge badge-secondary"
            data-toggle="tooltip"
            data-placement="bottom" title="<%= t('activities.show.category_of_activity') %>">
            <%= @observation.intervention_type.intervention_type_group.name %>
      </span>
    </p>
  </div>
</div>

<% if @observation.description.present? %>
  <div class="row">
    <div class="col-md-12 activity">
      <%= @observation.description %>
    </div>
  </div>
<% elsif can? :manage, @observation %>
  <div class="row">
    <div class="col-md-12 activity">
      <h4><%= t('activities.form.tell_us_more_label') %></h4>
      <p>
        <%= t('activities.form.tell_us_more_message') %>
      </p>
      <p><%= link_to t('activities.actions.edit'),
                     edit_school_intervention_path(@school, @observation),
                     class: 'btn btn-sm btn-primary' %></p>
    </div>
  </div>
<% end %>

<div class="row mt-4">
  <div class="col-md-12 activity">
    <%= link_to t('activities.show.all_activities'), school_timeline_path(@school), class: 'btn btn-sm btn-secondary' %>
    <% if can? :manage, @observation %>
      <%= if @observation.description.present?
            link_to t('activities.actions.edit'),
                    edit_school_intervention_path(@school, @observation),
                    class: 'btn btn-sm btn-warning'
          end %>
      <%= link_to t('activities.actions.delete'),
                  school_intervention_path(@school, @observation),
                  method: :delete,
                  data: { confirm: t('activities.actions.are_you_sure') },
                  class: 'btn btn-sm btn-danger' %>
    <% end %>
  </div>
</div>

<%= render Admin::RecordComponent.new(@observation, current_user:) %>
