<h1>School alternative heating sources</h1>

<div class='pb-6'>
<%= link_to 'New alternative heating source', new_school_alternative_heating_source_path(@school), class: 'btn btn-primary' %>
</div>
<br />

<table class="table table-condensed school_admin">
  <thead>
    <tr>
      <th>Source</th>
      <th>Percent of overall use</th>
      <th>Notes</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @alternative_heating_sources.each do |alternative_heating_source| %>
    <tr>
      <td><%= alternative_heating_source.source.humanize %></td>
      <td><%= alternative_heating_source.percent_of_overall_use %></td>
      <td><%= alternative_heating_source.notes %></td>
      <td>
        <%= link_to 'Edit', edit_school_alternative_heating_source_path(@school, alternative_heating_source), class: 'btn btn-warning btn-sm' %>
        <%= button_to 'Remove', school_alternative_heating_source_path(@school, alternative_heating_source), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-warning btn-sm' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
