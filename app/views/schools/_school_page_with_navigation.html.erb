<% content_for :page_title, "#{page_title} | #{school.name}" %>

<% if Flipper.enabled?(:new_manage_school_pages, current_user) %>
  <% content_for :header do %>
    <%= render Layout::Cards::PageHeaderComponent.new(title: page_title) %>
  <% end %>

  <% content_for :nav do %>
    <%= render Navigation::ManageSchoolComponent.new(school: school, current_user: current_user) %>
  <% end %>
  <%= yield %>
<% else %>
  <%= yield %>
<% end %>
