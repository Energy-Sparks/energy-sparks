<h1><%= t('schools.user_tariff_differential_prices.index.title') %></h1>

<div class="user_tariff">

  <p><%= t('schools.user_tariff_differential_prices.index.introduction') %>.</p>
  <br/>

  <%= render 'schools/user_tariffs/header', user_tariff: @user_tariff %>

  <h3><%= t('schools.user_tariff_differential_prices.index.consumption_charges') %></h3>

  <p><%= user_tariff_prices_text(@user_tariff) %></p>

  <div id="modal-window" class="modal hide" role="dialog" aria-hidden="true" ></div>

  <%= render 'schools/user_tariffs/rates_table', school: @school, user_tariff: @user_tariff, allow_edits: true %>

  <br/>

  <%= link_to t('common.labels.previous'), edit_school_user_tariff_path(@school, @user_tariff), class: 'btn' %>
  <%= link_to t('common.labels.next'), school_user_tariff_user_tariff_charges_path(@school, @user_tariff), class: 'btn' %>

</div>
