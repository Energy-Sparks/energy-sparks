<%= content_for :page_title, @school.name %>

<div class="d-flex justify-content-between align-items-center">
  <h1>Energy Usage&hellip;</h1>
  <% if @school.configuration %>
    <div class="h5"><%= link_to "Learn more about this school's energy use", school_analysis_index_path(@school), class: 'btn btn-outline-dark rounded-pill font-weight-bold' %></div>
  <% end %>
</div>
<p></p>
<div class="row dashboards">
  <%= render 'shared/dashboard_energy_charts', charts: @charts, school: @school %>
</div>

<% unless user_signed_in? %>
  <div class="row dashboards mb-4">
    <div class="col-md-6 text-center">
      <div class="card">
        <div class="card-body">
          <div class="card-title">
            <h2><%= @school.name  %> Staff</h2>
          </div>
          <div class="card-text">
            <%= link_to 'Log in with your email address and password', new_user_session_path(role: :staff, school: @school), class: 'btn btn-rounded'%>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6 text-center">
      <div class="card">
        <div class="card-body">
          <div class="card-title">
            <h2><%= @school.name  %> Pupils</h2>
          </div>
          <div class="card-text">
            <%=  link_to 'Log in with your pupil password', new_user_session_path(role: :pupil, school: @school), class: 'btn btn-rounded'%>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>



<%= render 'shared/dashboard_alerts', school: @school, dashboard_alert_content: @dashboard_alert_content, dashboard_alert: @dashboard_alert, content_field: :public_dashboard_title %>

<%= render 'shared/dashboard_timeline', school: @school, observations: @observations %>
