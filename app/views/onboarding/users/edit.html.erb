<h4><%= t('onboarding.users.edit.title') %></h4>

<%= simple_form_for @user, url: onboarding_user_path(@school_onboarding, @user), remote: true do |f| %>
  <%= render 'form', f: f, user: @user, school_onboarding: @school_onboarding %>
  <button class="btn" data-dismiss="modal" aria-hidden="true"><%= t('common.labels.cancel') %></button>
  <%= f.submit t('onboarding.users.edit.update_account'), class: 'btn btn-rounded'%>
<% end %>
