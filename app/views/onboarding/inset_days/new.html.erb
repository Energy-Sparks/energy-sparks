<div class="row justify-content-md-center">
  <div class="col col-md-10 col-lg-8">
    <h1><%= t('onboarding.inset_days.new.title') %></h1>

    <%= simple_form_for(@calendar_event, url: onboarding_inset_days_path(@school_onboarding)) do |f| %>
      <%= render 'form', form: f, calendar_event_types: @calendar_event_types %>
      <%= f.button :submit, t('onboarding.inset_days.new.add_inset_day') %>
      <%= link_to t('common.labels.back'), new_onboarding_completion_path(@school_onboarding, anchor: 'inset-days', show: 'inset-days'), class: 'btn' %>
    <% end %>
  </div>
</div>
