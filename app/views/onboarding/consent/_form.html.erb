<%= simple_form_for(consent_grant, url: path, method: :post) do |f| %>
  <%= f.hidden_field :consent_statement_id %>
  <%= f.input :name %>
  <%= f.input :job_title %>
  <%= f.input :school_name %>

  <div class="custom-control custom-checkbox agreements">
    <%= check_box_tag "privacy", false, false, class: 'custom-control-input multi-select must-check' %>
    <%= label_tag "privacy", t('consent.terms_and_conditions_html', terms_and_conditions_link: link_to('terms and conditions', terms_and_conditions_path, target: "_blank")), class: 'custom-control-label' %>
  </div>

  <%= f.button :submit, t('onboarding.consent.create'), class: 'btn btn-primary' %>
<% end %>
