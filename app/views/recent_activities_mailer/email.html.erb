      <td><%= nice_dates(observation.at) %></td>
      <td><%= link_to observation.school.name, school_url(observation.school) %></td>
      <td>
        <%= link_to school_intervention_url(observation.school, observation) do %>
          <% if observation.description.present? %>
            <%= observation.intervention_type.name %>
          <% else %>
            <%= observation.intervention_type.name %>
          <% end %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

