<% if current_school %>
  <% if can?(:show_pupils_dash, current_school) &&
        !current_page?(pupils_school_path(current_school)) %>
    <li class="nav-item nowrap">
      <%= link_to t('dashboards.pupil_dashboard'),
                  pupils_school_path(current_school), class: 'nav-link dash' %>
    </li>
  <% end %>

  <% if can?(:show, current_school) &&
        !current_page?(school_path(current_school)) %>
    <li class="nav-item nowrap">
      <%= link_to t('dashboards.adult_dashboard'),
                  school_path(current_school, ({ switch: true } if current_user&.pupil?)),
                  class: 'nav-link dash' %>
    </li>
  <% end %>
<% end %>
