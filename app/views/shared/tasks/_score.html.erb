<% if task.score %>
  <span class='float-right'>
    <%= t('common.points_html',
          count: tag.span(task.score,
                          class: 'badge badge-success',
                          data: { toggle: 'tooltip',
                                  placement: 'bottom' },
                          title: t("tasks.score.#{task.public_type}")).html_safe) %>
  </span>
<% end %>
