<div class="footer-second py-3">
  <div class="container">
    <div class="row d-flex align-items-center">
      <div class="col-md-4">
        <%= t('footer.cc_licence_notice_html') %>.
      </div>
      <div class="col-md-4">
        <%= t('footer.registered_charity_notice') %>.
      </div>
      <div class="col-md-4 d-flex justify-content-md-end">
          <ul class="list-inline d-flex justify-content-end my-2 my-md-0">
            <li class="list-inline-item">
              <a href="https://www.linkedin.com/company/energy-sparks/">
                <%= component 'icon', icon_set: 'fab', name: 'linkedin', style: :circle %>
              </a>
            </li>
            <li class="list-inline-item">
              <a href="https://x.com/EnergySparks">
                <%= component 'icon', icon_set: 'fab', name: 'x-twitter', style: :circle %>
              </a>
            </li>
            <li class="list-inline-item">
              <a href="https://www.instagram.com/energysparksuk/">
                <%= component 'icon', icon_set: 'fab', name: 'instagram', style: :circle %>
              </a>
            </li>
            <li class="list-inline-item">
              <a href="https://www.facebook.com/EnergySparksUK/">
                <%= component 'icon', icon_set: 'fab', name: 'facebook-square', style: :circle %>
              </a>
            </li>
            <li class="list-inline-item">
              <a href="https://github.com/energy-sparks/energy-sparks">
                <%= component 'icon', icon_set: 'fab', name: 'github', style: :circle %>
              </a>
            </li>
          </ul>
      </div>
    </div>
  </div>
</div>
<% if Flipper.enabled?(:download_footer_icons) %>
  <script src="https://unpkg.com/modern-screenshot"></script>
  <script>
    const style = document.createElement('style');
    // prevent hover color change
    style.innerHTML = '.footer-second { a:hover { color: #222222 !important; } }'
    document.head.appendChild(style);
    document.querySelectorAll('.footer-second li.list-inline-item').forEach(element => {
      console.log(element)
      element.onclick = event => {
        event.preventDefault()
        modernScreenshot.domToPng(element).then(dataUrl => {
          const link = document.createElement('a')
          link.download = `${event.target.classList[event.target.classList.length-1]}.png`
          link.href = dataUrl
          link.click()
        })
      }
    })
  </script>
<% end %>
