<% if I18n.locale.to_s == 'cy' && activity_type.t_attached(:image, :cy).present? %>
  <%= image_tag activity_type.image_cy, class: "card-img-top img-fluid " + css_class %>
<% elsif activity_type.t_attached(:image, :en).present? %>
  <%= image_tag activity_type.image_en, class: "card-img-top img-fluid " + css_class %>
<% else %>
  <%= image_tag "placeholder300x200.png", class: "card-img-top img-fluid activity-card-img" + css_class  %>
<% end %>
