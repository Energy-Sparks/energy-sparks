<% cache [activity_type, school&.latest_content, I18n.locale], expires_in: 4.hours do %>
  <div class="row mt-5">
    <div class="col-sm-2">
      <%= link_to activity_type_path(activity_type) do %>
        <%= render 'activity_types/image', activity_type:, css_class: 'activity-card-img-thumbnail' %>
      <% end %>
    </div>
    <div class="col-sm-10">
      <h4><%= link_to activity_type.name, activity_type_path(activity_type) %></h4>
      <p>
        <%= activity_type.summary %>
      </p>
      <% if activity_type.activities_for_school(school).empty? %>
        <%= render 'activity_types/activity_type_score', activity_type: %>
        <%= render 'activity_types/activity_type_key_stages', activity_type: %>
        <%= render 'activity_types/activity_type_subjects', activity_type: %>
      <% else %>
        <%= render 'activity_types/previous_records',
                   activities: activity_type.activities_for_school(school).by_date, school: %>
    <% end %>
    </div>
  </div>
<% end %>
