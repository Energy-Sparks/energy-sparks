<% content_for :page_title do %>
  <%= @activity_type.name %>
<% end %>

<div class="row padded-row">
  <div class="col-md-3">
    <img src="holder.js/300x200" alt="Card image cap">
  </div>
  <div class="col-md-6">
    <h2><%= @activity_type.name %></h2>
    <p>
      <% if @activity_type.summary %>
        <%= @activity_type.summary %>
      <% else %>
        <em>No summary given</em>
      <% end %>
    </p>
    <h5>
      <%= render 'activity_types/activity_type_subjects', activity_type: @activity_type %>
      <%= render 'activity_types/activity_type_key_stages', activity_type: @activity_type %>
    </h5>
  </div>
  <div class="col-md-3">
    <%= link_to "All #{@activity_type.activity_category.name} activities", activity_category_path(@activity_type.activity_category), class: 'btn btn-secondary float-right' %>
  </div>
</div>

<% if params[:school] %>
  <div class="row">
    <div class="col-md-8">
      <div class="row alert info-bar text-dark bg-neutral" role="alert">
        <div class="col-md-1">
          <i class="fas fa-tasks fa-2x"></i>
        </div>
        <div class="col-md-8">
          Complete this activity to score your school <strong>10</strong> points!
        </div>
        <div class="col-md-3">
          <button class='btn btn-light rounded-pill font-weight-bold' style="line-height: 1.0; font-size: 16px; height: auto; width: auto;">Record this activity</button>
        </div>

      </div>
    </div>
  </div>
<% end %>

<div class="row padded-row">
  <div class="col-md-9">
    <div class="activity_type">
      <% if @activity_type.description %>
        <%= @activity_type.description %>
      <% else %>
        <p><em>No description given</em></p>
      <% end %>
    </div>
  </div>
  <div class="col-md-3">
    <% if @activity_type.download_links.present? %>
      <h4 style="padding-top: 0px;">Download resources</h4>
      <div class="activity_type">
        <%= @activity_type.download_links %>
      </div>
    <% end %>
  </div>
</div>

<%= render 'activity_types/prompt_complete_activity', activity_type: @activity_type, recorded: @recorded, school_count: @school_count %>
