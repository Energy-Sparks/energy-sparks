<h3><%= t('calendars.legend.title') %></h3>
<div class="row">
  <div class='calendar-legend col'>
    <div class='legend-scale'>
      <ul class='legend-labels'>
        <li>
          <span style='background:<%= Colours::MID_BLUE %>;'></span>
          <div class="description"><%= t('calendars.legend.bank_holiday') %></div>
        </li>
        <li>
          <span style='background:<%= Colours::LIGHT_ORANGE %>;'></span>
          <div class="description"><%= t('calendars.legend.term_time') %></div>
        </li>
        <li>
          <span style='background:<%= Colours::GREEN %>;'></span>
          <div class="description"><%= t('calendars.legend.holiday') %></div>
        </li>
        <li>
          <span style='background:<%= Colours::DARK_ORANGE %>;'></span>
          <div class="description"><%= t('calendars.legend.inset_day') %><br>(<%= t('calendars.legend.in_school') %>)</div>
        </li>
        <li>
          <span style='background:<%= Colours::MID_PURPLE %>;'></span>
          <div class="description"><%= t('calendars.legend.inset_day') %><br>(<%= t('calendars.legend.out_school') %>)</div>
        </li>
      </ul>
    </div>
  </div>
</div>
