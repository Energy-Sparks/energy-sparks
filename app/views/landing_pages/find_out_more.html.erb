        </div>
      </div>
      <div class="row">
        <div class="col-md-12 text-right">
          <%= link_to t('campaigns.find_out_more.emissions.case_study'),
                      case_study_link(@marketing_studies[:emissions]),
                      class: 'btn btn-lg btn-outline-dark rounded-pill font-weight-bold' %>
        </div>
      </div>
    </div>
  </div>
</div>

