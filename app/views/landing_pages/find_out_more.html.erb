<% content_for :page_title, t('campaigns.find_out_more.title') %>

<header>
  <div class="row masthead" style="height: 600px;">
    <div class="col-7">
    </div>
    <div class="col-5 masthead-content">
      <div class="row pt-5">
        <div class="col">
          <h1 class='text-white'><%= t('campaigns.find_out_more.title') %></h1>
        </div>
      </div>
      <div class="row">
        <div class="col pr-5">
          <h3 class='text-white'><%= t('campaigns.find_out_more.sub_title') %></h3>
        </div>
      </div>
    </div>
  </div>
</header>

<div class="application container home-block">
  <div class="row">
    <div class="col-md-7">
      <div class="row">
        <div class="col-md-12">
          <h2><%= t('campaigns.find_out_more.benefits.costs') %></h2>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <h2><%= t('campaigns.find_out_more.benefits.emissions') %></h2>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <h2><%= t('campaigns.find_out_more.benefits.pupils') %></h2>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 pt-2 text-center cta">
          <%= link_to t('campaigns.find_out_more.book_demo'),
                      book_demo_campaigns_path(utm_params_for_redirect),
                      class: 'btn btn-success' %>
          <%= link_to t('campaigns.find_out_more.find_out_more'),
                      more_information_campaigns_path(utm_params_for_redirect),
                      class: 'btn btn-success' %>
        </div>
      </div>
    </div>
    <div class="col-md-5">
      <%= image_tag('on-screen.jpg', class: 'img-fluid rounded-25') %>
    </div>
  </div>
</div>

<div class="row header-dark">
  <div class="col-md-12">
    <div class="application container home-block">
      <div class="row">
        <div class="col-md-12 text-center">
          <h2 class='text-white'>
            <%= t('campaigns.find_out_more.learn_why.title',
                  school_count: marketing_school_count,
                  mat_count: marketing_mat_count) %>
          </h2>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="application container home-block">
  <div class="row pb-5">
    <div class="col-md-5">
      <div class="row">
        <div class="col-md-12">
