<% content_for :page_title, t('campaigns.find_out_more.title') %>

<header>
  <div class="row masthead" style="height: 600px;">
    <div class="col-md-7">
    </div>
    <div class="col-md-5 masthead-content">
      <div class="row pt-5">
        <div class="col-md-12">
          <h1 class="display-4"><strong><%= t('campaigns.find_out_more.title') %></strong></h1>
      </div>
      </div>
      <div class="row">
        <div class="col-md-12 pr-5">
          <h2><%= t('campaigns.find_out_more.sub_title') %></h2>
        </div>
      </div>
    </div>
  </div>
</header>

<div class="application container">
  <div class="row">
    <div class="col-md-7">
      <div class="row">
        <div class="col-md-12">
          <h1 style="color: #232b49;"><%= t('campaigns.find_out_more.benefits.costs') %></h1>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <h1 style="color: #232b49;"><%= t('campaigns.find_out_more.benefits.emissions') %></h1>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <h1 style="color: #232b49;"><%= t('campaigns.find_out_more.benefits.pupils') %></h1>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 pt-2 text-center cta">
          <%= link_to t('campaigns.find_out_more.book_demo'), book_demo_campaigns_path, class: 'btn bg-positive' %>
        </div>
        <div class="col-md-6 pt-2 text-center cta">
          <%= link_to t('campaigns.find_out_more.find_out_more'), more_information_campaigns_path,
                      class: 'btn bg-positive' %>
        </div>
      </div>
    </div>
    <div class="col-md-5">
      <%= image_tag('on-screen.jpg', class: 'img-fluid rounded-25') %>
    </div>
  </div>
</div>

<div class="row bg-dark-blue" style="background-color: #232b49;">
  <div class="col-md-12">
    <div class="application container">
      <div class="row">
        <div class="col-md-12 text-center">
          <h1 style="color: white;">
            <%= t('marketing.mats.learn_why.title',
                  school_count: marketing_school_count,
                  mat_count: marketing_mat_count) %>
          </h1>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="application container">
  <div class="row pb-5">
    <div class="col-md-5">
      <div class="row">
        <div class="col-md-12">
          <h1><%= t('campaigns.find_out_more.costs.title') %></h1>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <h4><%= t('campaigns.find_out_more.costs.sub_title') %></h4>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <h4><%= t('campaigns.find_out_more.costs.bullets').html_safe %></h4>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= link_to t('campaigns.find_out_more.costs.case_study'),
                      case_study_link(@marketing_studies[:costs]),
                      class: 'btn btn-lg btn-outline-dark rounded-pill font-weight-bold' %>
        </div>
      </div>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-6">
      <div class="row">
        <div class="col-md-12">
          <div class="bg-light-blue p-5 justify-content-center testimonial rounded-25">
            <blockquote class="quotes"><%= t('marketing.mats.costs.quote_html') %></blockquote>
            <figcaption class="quote-by">
              <strong><%= t('marketing.mats.costs.quote_source') %></strong>
