    <div class="col-md-1"></div>
    <div class="col-md-6">
      <div class="row">
        <div class="col-md-12">
          <div class="bg-light-blue p-5 justify-content-center testimonial rounded-25">
            <blockquote class="quotes"><%= t('campaigns.find_out_more.pupils.quote') %></blockquote>
            <figcaption class="quote-by">
              <strong><%= t('campaigns.find_out_more.pupils.quote_source') %></strong>
            </figcaption>
