<div class='container'>
  <h1>Grid Component</h1>

  <h3>2 cols</h3>
  <i>With block and prompt list</i>

  <%= render GridComponent.new(
        id: '2-cols', cols: 2,
        column_classes: 'mb-4', component_classes: %w[h-100]
      ) do |grid| %>
    <% grid.with_column :block, column_classes: 'pb-2', classes: %w[bg-light rounded] do %>
      <p>With block</p>
    <% end %>
    <% grid.with_column :prompt_list do |prompt_list| %>
      <%= prompt_list.with_title { 'With prompt list' } %>
      <%= prompt_list.with_prompt(fuel_type: :gas, status: :positive) { 'Gas positive prompt' } %>
      <%= prompt_list.with_prompt(fuel_type: :electricity, status: :negative) { 'Electricity negative prompt' } %>
    <% end %>
  <% end %>

  <h3>3 cols</h3>
  <i>With image and two blocks</i>

  <%= render GridComponent.new(
        id: '3-cols', cols: 3, column_classes: 'mb-4', component_classes: %w[bg-light p-4 rounded text-center h-100]
      ) do |grid| %>
    <% grid.with_column :image, 'laptop.jpg', classes: 'w-100' %>
    <% grid.with_column :block do %>
      With block
    <% end %>
    <% grid.with_column :block do %>
      With block
    <% end %>
  <% end %>

  <h3>4 cols</h3>
  <i>With blocks</i>

  <%= render GridComponent.new(
        id: '4-cols', cols: 4, column_classes: 'pb-4', component_classes: %w[h-100 p-4 rounded]
      ) do |grid| %>
    <% grid.with_column :block, classes: 'bg-gas-light' do %>
      With block
    <% end %>
    <% grid.with_column :block, classes: 'text-center bg-electric-light' do %>
      With block
    <% end %>
    <% grid.with_column :block, classes: 'text-center bg-storage-light' do %>
      With block
    <% end %>
    <% grid.with_column :block, classes: 'text-right bg-solar-light' do %>
      With block
    <% end %>
  <% end %>

</div>
